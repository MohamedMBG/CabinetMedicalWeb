@model CabinetMedicalWeb.Models.Consultation

@{
    ViewData["Title"] = "New Consultation";
    var patientName = ViewBag.PatientName as string ?? "Patient";
    var dossierId = ViewBag.DossierId as int? ?? Model?.DossierMedicalId ?? 0;
    
    // Theme Colors
    var primaryColor = "#7AA3D1";
    var primaryLight = "#A7CBED";
}

<style>
    /* Scoped Styles matching the Dashboard Theme */
    .consultation-wrapper {
        --primary: #7AA3D1;
        --primary-hover: #91B3D9;
        --primary-light: #A7CBED;
        --secondary: #666B72;
        --surface: #FFFFFF;
        --bg: #E9EFF7;
        --border: #D4DEEC;
        --text-main: #666B72;
        
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        padding: 0 1.5rem 3rem 1.5rem;
        color: var(--text-main);
    }

    /* --- Hero Header --- */
    .page-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%);
        border-radius: 24px;
        padding: 2rem 2.5rem;
        color: white;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 25px -5px rgba(79, 70, 229, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -100px; right: -50px;
        width: 300px; height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
    }

    .header-title h2 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
        letter-spacing: -0.02em;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .header-meta {
        font-size: 0.95rem;
        opacity: 0.9;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .header-badge {
        background: rgba(255,255,255,0.2);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        backdrop-filter: blur(4px);
    }

    /* --- Layout Grid --- */
    .layout-grid {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: 2rem;
    }

    /* --- Form Card --- */
    .form-card {
        background: var(--surface);
        border-radius: 20px;
        border: 1px solid var(--border);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .form-section {
        padding: 2rem;
    }

    .section-title {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.75rem;
        background: #EEF4FB;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.9rem;
        color: var(--primary);
        margin-bottom: 1.5rem;
    }

    .section-title i {
        color: var(--primary);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-main);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.95rem;
    }

    .form-label i {
        color: var(--primary);
        margin-right: 0.5rem;
        width: 20px;
        text-align: center;
    }

    .form-control {
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        color: var(--text-main);
        background-color: #F8FAFC;
        transition: all 0.2s ease;
    }

    .form-control:focus {
        background-color: #fff;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px var(--primary-light);
        outline: none;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 300px; /* Increased from 150px to 300px */
        line-height: 1.6;
    }

    /* --- Quick chips --- */
    .chip-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 0.5rem 0 0.25rem 0;
    }

    .chip {
        border: 1px solid var(--border);
        background: #f7f9fb;
        padding: 0.4rem 0.75rem;
        border-radius: 999px;
        font-size: 0.9rem;
        color: var(--secondary);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .chip:hover {
        background: var(--primary-light);
        color: #1f2a44;
        border-color: var(--primary);
    }

    /* --- Summary Card --- */
    .summary-card {
        background: linear-gradient(180deg, #f6f9fe 0%, #ffffff 100%);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 1.25rem;
        margin-bottom: 1.25rem;
        box-shadow: 0 10px 30px -20px rgba(0,0,0,0.25);
    }

    .summary-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 1rem;
    }

    .summary-row {
        display: flex;
        gap: 0.75rem;
        align-items: flex-start;
        margin-bottom: 0.85rem;
    }

    .summary-row small {
        color: var(--secondary);
    }

    /* --- Sidebar Info --- */
    .info-card {
        background: var(--surface);
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid var(--border);
        margin-bottom: 1.5rem;
    }

    .info-header {
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary);
    }

    .info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    } 

        <div class="d-none d-md-block opacity-50" style="font-size: 4rem;">
            <i class="fas fa-file-medical-alt"></i>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0 rounded-4 mb-4 d-flex align-items-center">
            <i class="fas fa-exclamation-circle me-3 fs-4"></i>
            <div>@TempData["ErrorMessage"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="layout-grid">
        
        <!-- Main Form Column -->
        <div class="main-column">
            <form asp-action="Create" method="post" asp-area="Medical">
                <div class="form-card">
                    <div class="form-section">
                        <div asp-validation-summary="All" class="alert alert-danger rounded-3 mb-4" style="display:none;"></div>
                        <input type="hidden" asp-for="DossierMedicalId" value="@dossierId" />

                        <div class="section-title"><i class="fas fa-clipboard-list"></i> Consultation details</div>
                        <div class="row">
                            <!-- Date Field -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Date" class="form-label">
                                        <i class="fas fa-calendar-alt"></i> Date & Time
                                    </label>
                                    <input asp-for="Date" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="Date" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Motif Field -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Motif" class="form-label">
                                        <i class="fas fa-tag"></i> Reason for Visit
                                    </label>
                                    <input asp-for="Motif" class="form-control" placeholder="e.g. Routine Checkup, Severe Headache..." />
                                    <div class="chip-list">
                                        <span class="chip" data-fill="Motif">Annual check-up</span>
                                        <span class="chip" data-fill="Motif">Follow-up visit</span>
                                        <span class="chip" data-fill="Motif">Post-surgery review</span>
                                        <span class="chip" data-fill="Motif">Acute symptoms</span>
                                    </div>
                                    <span asp-validation-for="Motif" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Notes Field -->
                        <div class="form-group mb-0">
                            <label asp-for="Notes" class="form-label">
                                <i class="fas fa-notes-medical"></i> Clinical Notes & Diagnosis
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="15"
                                      placeholder="Record examination findings, diagnosis, patient history, and treatment plan here..."></textarea>
                            <div class="d-flex justify-content-between align-items-center mt-2 small text-muted">
                                <span><i class="fas fa-lightbulb me-1"></i>Use a template to start faster</span>
                                <span id="notes-counter">0 characters</span>
                            </div>
                            <div class="chip-list">
                                <span class="chip" data-append="Notes">• Vitals stable, no acute distress.</span>
                                <span class="chip" data-append="Notes">• Patient education provided about warning signs.</span>
                                <span class="chip" data-append="Notes">• Prescribed medication as per protocol.</span>
                            </div>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Actions Footer -->
                    <div class="form-actions">
                        <a asp-controller="DossierMedicals" asp-action="Details" asp-route-id="@dossierId" class="btn-cancel">
                            Cancel
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-save"></i> Save Consultation Record
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Sidebar Column (Context) -->
        <div class="sidebar-column">

            <!-- Live Summary Card -->
            <div class="summary-card">
                <div class="summary-header"><i class="fas fa-eye"></i> Live Summary</div>
                <div class="summary-row">
                    <i class="far fa-clock text-primary"></i>
                    <div>
                        <div class="fw-semibold">Date & Time</div>
                        <small id="summary-date">Not set</small>
                    </div>
                </div>
                <div class="summary-row">
                    <i class="fas fa-tag text-primary"></i>
                    <div>
                        <div class="fw-semibold">Reason</div>
                        <small id="summary-motif">Awaiting input</small>
                    </div>
                </div>
                <div class="summary-row mb-0">
                    <i class="fas fa-align-left text-primary"></i>
                    <div>
                        <div class="fw-semibold">Notes</div>
                        <small id="summary-notes">Add clinical notes to generate preview.</small>
                    </div>
                </div>
            </div>

            <!-- Patient Context Card -->
            <div class="info-card">
                <div class="info-header">
                    <i class="fas fa-info-circle"></i> Quick Guide
                </div>
                <ul class="info-list">
                    <li class="info-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Verify the <strong>Date & Time</strong> match the actual appointment.</span>
                    </li>
                    <li class="info-item">
                        <i class="fas fa-check-circle"></i>
                        <span><strong>Motif</strong> should be concise (e.g., "Flu Symptoms").</span>
                    </li>
                    <li class="info-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Use the <strong>Notes</strong> section for detailed observations and diagnosis.</span>
                    </li>
                </ul>
            </div>

            <!-- Helper Card -->
            <div class="info-card bg-light border-0">
                <div class="text-center py-3">
                    <i class="fas fa-keyboard fa-2x text-muted mb-3"></i>
                    <h6 class="fw-bold text-dark">Pro Tip</h6>
                    <p class="small text-muted mb-0">
                        Detailed notes improve long-term patient care tracking. You can resize the text area if you need more space.
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-set current date/time if empty
            const dateInput = document.querySelector('input[type="datetime-local"]');
            if (dateInput && !dateInput.value) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                dateInput.value = now.toISOString().slice(0, 16);
            }

            // Chips for quick filling
            const chips = document.querySelectorAll('.chip[data-fill]');
            chips.forEach(chip => {
                chip.addEventListener('click', () => {
                    const targetName = chip.getAttribute('data-fill');
                    const input = document.querySelector(`[name="${targetName}"]`);
                    if (input) {
                        input.value = chip.textContent.trim();
                        input.dispatchEvent(new Event('input'));
                    }
                });
            });

            // Chips to append to textarea
            const appendChips = document.querySelectorAll('.chip[data-append]');
            appendChips.forEach(chip => {
                chip.addEventListener('click', () => {
                    const targetName = chip.getAttribute('data-append');
                    const input = document.querySelector(`[name="${targetName}"]`);
                    if (input) {
                        const prefix = input.value && !input.value.endsWith('\n') ? '\n' : '';
                        input.value = `${input.value}${prefix}${chip.textContent.trim()}`.trimStart();
                        input.dispatchEvent(new Event('input'));
                    }
                });
            });

            // Live summary update
            const summaryDate = document.getElementById('summary-date');
            const summaryMotif = document.getElementById('summary-motif');
            const summaryNotes = document.getElementById('summary-notes');
            const notesCounter = document.getElementById('notes-counter');

            const updateSummary = () => {
                if (dateInput) {
                    summaryDate.textContent = dateInput.value ? new Date(dateInput.value).toLocaleString() : 'Not set';
                }

                const motifInput = document.querySelector('[name="Motif"]');
                if (motifInput) {
                    summaryMotif.textContent = motifInput.value || 'Awaiting input';
                }

                const notesInput = document.querySelector('[name="Notes"]');
                if (notesInput) {
                    const note = notesInput.value.trim();
                    summaryNotes.textContent = note ? note.slice(0, 140) + (note.length > 140 ? '…' : '') : 'Add clinical notes to generate preview.';
                    notesCounter.textContent = `${note.length} characters`;
                }
            };

            document.querySelectorAll('[name="Date"], [name="Motif"], [name="Notes"]').forEach(el => {
                el.addEventListener('input', updateSummary);
                el.addEventListener('change', updateSummary);
            });

            updateSummary();
        });
    </script>
}