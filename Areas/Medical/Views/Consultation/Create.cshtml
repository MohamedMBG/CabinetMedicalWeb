@model CabinetMedicalWeb.Models.Consultation

@{
    ViewData["Title"] = "New Consultation";
    var patientName = ViewBag.PatientName as string ?? "Patient";
    var dossierId = ViewBag.DossierId as int? ?? Model?.DossierMedicalId ?? 0;
    
    // Theme Colors
    var primaryColor = "#4F46E5";
    var primaryLight = "#EEF2FF";
}

<style>
    /* Scoped Styles matching the Dashboard Theme */
    .consultation-wrapper {
        --primary: #4F46E5;
        --primary-hover: #4338CA;
        --primary-light: #EEF2FF;
        --secondary: #64748B;
        --surface: #FFFFFF;
        --bg: #F8FAFC;
        --border: #E2E8F0;
        --text-main: #1E293B;
        
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        padding: 0 1.5rem 3rem 1.5rem;
        color: var(--text-main);
    }

    /* --- Hero Header --- */
    .page-header {
        background: linear-gradient(135deg, var(--primary) 0%, #7C3AED 100%);
        border-radius: 24px;
        padding: 2rem 2.5rem;
        color: white;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 25px -5px rgba(79, 70, 229, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -100px; right: -50px;
        width: 300px; height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
    }

    .header-title h2 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
        letter-spacing: -0.02em;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .header-meta {
        font-size: 0.95rem;
        opacity: 0.9;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .header-badge {
        background: rgba(255,255,255,0.2);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        backdrop-filter: blur(4px);
    }

    /* --- Layout Grid --- */
    .layout-grid {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: 2rem;
    }

    /* --- Form Card --- */
    .form-card {
        background: var(--surface);
        border-radius: 20px;
        border: 1px solid var(--border);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .form-section {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-main);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.95rem;
    }

    .form-label i {
        color: var(--primary);
        margin-right: 0.5rem;
        width: 20px;
        text-align: center;
    }

    .form-control {
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        color: var(--text-main);
        background-color: #F8FAFC;
        transition: all 0.2s ease;
    }

    .form-control:focus {
        background-color: #fff;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px var(--primary-light);
        outline: none;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 300px; /* Increased from 150px to 300px */
        line-height: 1.6;
    }

    /* --- Sidebar Info --- */
    .info-card {
        background: var(--surface);
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid var(--border);
        margin-bottom: 1.5rem;
    }

    .info-header {
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary);
    }

    .info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .info-item {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        color: var(--secondary);
    }

    .info-item i {
        color: var(--primary);
        margin-top: 0.2rem;
    }

    /* --- Actions --- */
    .form-actions {
        background: #F8FAFC;
        padding: 1.5rem 2rem;
        border-top: 1px solid var(--border);
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        align-items: center;
    }

    .btn-cancel {
        color: var(--secondary);
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        text-decoration: none;
        transition: color 0.2s;
        background: white;
        border: 1px solid var(--border);
    }

    .btn-cancel:hover {
        background: #F1F5F9;
        color: var(--text-main);
    }

    .btn-submit {
        background: var(--primary);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 6px rgba(79, 70, 229, 0.2);
    }

    .btn-submit:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 8px 12px rgba(79, 70, 229, 0.25);
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .layout-grid {
            grid-template-columns: 1fr;
        }
        .form-actions {
            flex-direction: column-reverse;
        }
        .btn-submit, .btn-cancel {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="container-fluid consultation-wrapper">
    
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-title">
                <h2><i class="fas fa-stethoscope"></i> New Consultation</h2>
            </div>
            <div class="header-meta">
                <span>Recording clinical data for</span>
                <span class="header-badge"><i class="fas fa-user"></i> @patientName</span>
            </div>
        </div>
        <!-- Decorative Icon (Optional) -->
        <div class="d-none d-md-block opacity-50" style="font-size: 4rem;">
            <i class="fas fa-file-medical-alt"></i>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0 rounded-4 mb-4 d-flex align-items-center">
            <i class="fas fa-exclamation-circle me-3 fs-4"></i>
            <div>@TempData["ErrorMessage"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="layout-grid">
        
        <!-- Main Form Column -->
        <div class="main-column">
            <form asp-action="Create" method="post" asp-area="Medical">
                <div class="form-card">
                    <div class="form-section">
                        <div asp-validation-summary="All" class="alert alert-danger rounded-3 mb-4" style="display:none;"></div>
                        <input type="hidden" asp-for="DossierMedicalId" value="@dossierId" />

                        <div class="row">
                            <!-- Date Field -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Date" class="form-label">
                                        <i class="fas fa-calendar-alt"></i> Date & Time
                                    </label>
                                    <input asp-for="Date" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="Date" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Motif Field -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Motif" class="form-label">
                                        <i class="fas fa-tag"></i> Reason for Visit
                                    </label>
                                    <input asp-for="Motif" class="form-control" placeholder="e.g. Routine Checkup, Severe Headache..." />
                                    <span asp-validation-for="Motif" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Notes Field -->
                        <div class="form-group mb-0">
                            <label asp-for="Notes" class="form-label">
                                <i class="fas fa-notes-medical"></i> Clinical Notes & Diagnosis
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="15" 
                                      placeholder="Record examination findings, diagnosis, patient history, and treatment plan here..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Actions Footer -->
                    <div class="form-actions">
                        <a asp-controller="DossierMedicals" asp-action="Details" asp-route-id="@dossierId" class="btn-cancel">
                            Cancel
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-save"></i> Save Consultation Record
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Sidebar Column (Context) -->
        <div class="sidebar-column">
            
            <!-- Patient Context Card -->
            <div class="info-card">
                <div class="info-header">
                    <i class="fas fa-info-circle"></i> Quick Guide
                </div>
                <ul class="info-list">
                    <li class="info-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Verify the <strong>Date & Time</strong> match the actual appointment.</span>
                    </li>
                    <li class="info-item">
                        <i class="fas fa-check-circle"></i>
                        <span><strong>Motif</strong> should be concise (e.g., "Flu Symptoms").</span>
                    </li>
                    <li class="info-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Use the <strong>Notes</strong> section for detailed observations and diagnosis.</span>
                    </li>
                </ul>
            </div>

            <!-- Helper Card -->
            <div class="info-card bg-light border-0">
                <div class="text-center py-3">
                    <i class="fas fa-keyboard fa-2x text-muted mb-3"></i>
                    <h6 class="fw-bold text-dark">Pro Tip</h6>
                    <p class="small text-muted mb-0">
                        Detailed notes improve long-term patient care tracking. You can resize the text area if you need more space.
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-set current date/time if empty
            const dateInput = document.querySelector('input[type="datetime-local"]');
            if (dateInput && !dateInput.value) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                dateInput.value = now.toISOString().slice(0, 16);
            }
        });
    </script>
}