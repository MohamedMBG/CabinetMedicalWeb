@model CabinetMedicalWeb.Models.Consultation

@{
    ViewData["Title"] = "Nouvelle Consultation";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var patientName = ViewBag.PatientName as string ?? "Patient Inconnu";
    var dossierId = ViewBag.DossierId as int? ?? Model?.DossierMedicalId ?? 0;
    
    var colorPrimary = "#4F46E5"; // Indigo
    var colorBg = "#F3F4F6";
}

<style>
    body { background-color: @colorBg; font-family: 'Inter', system-ui, sans-serif; }
    
    /* Animations */
    @@keyframes slideUp { from { opacity:0; transform:translateY(20px); } to { opacity:1; transform:translateY(0); } }
    .animate-in { animation: slideUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }

    /* Layout */
    .page-wrapper {
        max-width: 1400px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 2rem;
        align-items: start;
    }

    /* Main Form Card */
    .form-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        border-radius: 24px;
        border: 1px solid rgba(255,255,255,0.5);
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, @colorPrimary 0%, #818CF8 100%);
        padding: 2.5rem;
        color: white;
        position: relative;
    }

    .form-header-content h2 { font-weight: 800; margin: 0; font-size: 1.8rem; letter-spacing: -0.02em; }
    .form-header-content p { opacity: 0.9; margin: 0.5rem 0 0; font-size: 1rem; }

    .form-body { padding: 2.5rem; }

    /* Floating Inputs */
    .form-floating > .form-control {
        border-radius: 12px;
        border: 2px solid #E5E7EB;
        background-color: #F9FAFB;
        height: auto;
        min-height: 3.5rem;
    }
    .form-floating > .form-control:focus {
        border-color: @colorPrimary;
        background-color: #fff;
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
    }
    .form-floating > label { color: #6B7280; }
    
    textarea.form-control { min-height: 300px; line-height: 1.6; }

    /* Chips */
    .chip-container { display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: 0.5rem; }
    .chip {
        font-size: 0.85rem;
        font-weight: 600;
        color: #4F46E5;
        background: #EEF2FF;
        padding: 0.4rem 0.8rem;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.2s;
        border: 1px solid #C7D2FE;
        user-select: none;
    }
    .chip:hover { background: #4F46E5; color: white; transform: translateY(-1px); }
    .chip i { margin-right: 4px; }

    /* Sidebar */
    .sidebar { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 1.5rem; }
    
    .info-card {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        border: 1px solid #F3F4F6;
    }

    .info-title {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 700;
        color: #6B7280;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .live-preview-item { margin-bottom: 1rem; }
    .live-label { font-size: 0.8rem; color: #9CA3AF; font-weight: 600; margin-bottom: 0.2rem; }
    .live-value { font-weight: 600; color: #1F2937; font-size: 0.95rem; word-wrap: break-word; }
    
    /* Buttons */
    .actions-bar {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #E5E7EB;
    }
    
    .btn-save {
        background-color: @colorPrimary;
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        border: none;
        transition: all 0.2s;
        box-shadow: 0 4px 10px rgba(79, 70, 229, 0.3);
    }
    .btn-save:hover { transform: translateY(-2px); background-color: #4338CA; color: white; }

    .btn-cancel {
        color: #6B7280;
        padding: 0.8rem 1.5rem;
        text-decoration: none;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.2s;
        background: #F3F4F6;
    }
    .btn-cancel:hover { background: #E5E7EB; color: #1F2937; }

    @@media (max-width: 992px) {
        .page-wrapper { grid-template-columns: 1fr; }
        .sidebar { position: static; }
    }
</style>

<div class="page-wrapper">
    
    <!-- LEFT: FORM -->
    <div class="form-column animate-in">
        <form asp-action="Create" method="post">
            <div class="form-card">
                
                <!-- Header -->
                <div class="form-header">
                    <div class="form-header-content">
                        <div class="d-flex align-items-center gap-3 mb-2">
                            <div class="bg-white bg-opacity-20 rounded-circle p-2 d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                                <i class="fas fa-stethoscope fa-lg"></i>
                            </div>
                            <span class="badge bg-white bg-opacity-25 border border-white border-opacity-25 rounded-pill px-3">Dossier #@dossierId</span>
                        </div>
                        <h2>Nouvelle Consultation</h2>
                        <p>Patient : <strong>@patientName</strong></p>
                    </div>
                </div>

                <div class="form-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                    <input type="hidden" asp-for="DossierMedicalId" value="@dossierId" />

                    <!-- Date & Motif Row -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-5">
                            <div class="form-floating">
                                <input asp-for="Date" class="form-control" type="datetime-local" />
                                <label asp-for="Date">Date et Heure</label>
                            </div>
                            <span asp-validation-for="Date" class="text-danger small ms-1"></span>
                        </div>
                        <div class="col-md-7">
                            <div class="form-floating">
                                <input asp-for="Motif" class="form-control" placeholder="Motif" />
                                <label asp-for="Motif">Motif de la visite</label>
                            </div>
                            <div class="chip-container">
                                <span class="chip" data-target="Motif" data-val="Consultation de routine"><i class="fas fa-plus"></i> Routine</span>
                                <span class="chip" data-target="Motif" data-val="Urgence douleur"><i class="fas fa-plus"></i> Urgence</span>
                                <span class="chip" data-target="Motif" data-val="Suivi traitement"><i class="fas fa-plus"></i> Suivi</span>
                                <span class="chip" data-target="Motif" data-val="Contrôle annuel"><i class="fas fa-plus"></i> Contrôle</span>
                            </div>
                            <span asp-validation-for="Motif" class="text-danger small ms-1"></span>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="mb-2">
                        <div class="form-floating">
                            <textarea asp-for="Notes" class="form-control" placeholder="Observations"></textarea>
                            <label asp-for="Notes">Observations cliniques & Diagnostic</label>
                        </div>
                        <div class="d-flex justify-content-between align-items-start mt-2">
                            <div class="chip-container mt-0">
                                <span class="chip" data-target="Notes" data-val="Patient conscient et orienté." data-append="true"><i class="fas fa-plus"></i> Constantes OK</span>
                                <span class="chip" data-target="Notes" data-val="Douleur localisée quadrant supérieur." data-append="true"><i class="fas fa-plus"></i> Douleur Q1</span>
                                <span class="chip" data-target="Notes" data-val="Aucune anomalie détectée." data-append="true"><i class="fas fa-plus"></i> RAS</span>
                            </div>
                            <small class="text-muted" id="char-count">0 chars</small>
                        </div>
                        <span asp-validation-for="Notes" class="text-danger small ms-1"></span>
                    </div>

                    <!-- Actions -->
                    <div class="actions-bar">
                        <a asp-controller="DossierMedicals" asp-action="Details" asp-route-id="@dossierId" class="btn-cancel">
                            Annuler
                        </a>
                        <button type="submit" class="btn-save">
                            <i class="fas fa-check-circle me-2"></i>Enregistrer
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- RIGHT: SIDEBAR PREVIEW -->
    <div class="sidebar animate-in delay-1">
        
        <!-- Live Preview -->
        <div class="info-card">
            <div class="info-title text-primary">
                <i class="fas fa-eye"></i> Aperçu en direct
            </div>
            
            <div class="live-preview-item">
                <div class="live-label">Date</div>
                <div class="live-value" id="preview-date">-</div>
            </div>
            <div class="live-preview-item">
                <div class="live-label">Motif</div>
                <div class="live-value" id="preview-motif"><span class="text-muted fst-italic">À définir</span></div>
            </div>
            <div class="live-preview-item mb-0">
                <div class="live-label">Extrait des Notes</div>
                <div class="live-value small text-muted" id="preview-notes">...</div>
            </div>
        </div>

        <!-- Tips -->
        <div class="info-card" style="background: #F0FDFA; border-color: #CCFBF1;">
            <div class="info-title" style="color: #0F766E;">
                <i class="fas fa-lightbulb"></i> Astuces Pro
            </div>
            <ul class="list-unstyled mb-0 small text-secondary d-flex flex-column gap-2">
                <li><i class="fas fa-check text-success me-2"></i>Utilisez les <strong>tags</strong> pour remplir rapidement.</li>
                <li><i class="fas fa-check text-success me-2"></i>Détaillez bien le diagnostic pour l'historique.</li>
                <li><i class="fas fa-check text-success me-2"></i>La sauvegarde mettra à jour le dossier immédiatement.</li>
            </ul>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- 1. Init Date ---
            const dateInput = document.getElementById('Date');
            if(dateInput && !dateInput.value) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                dateInput.value = now.toISOString().slice(0, 16);
            }

            // --- 2. Live Preview & Char Count ---
            const inputs = {
                date: document.getElementById('Date'),
                motif: document.getElementById('Motif'),
                notes: document.getElementById('Notes')
            };
            const displays = {
                date: document.getElementById('preview-date'),
                motif: document.getElementById('preview-motif'),
                notes: document.getElementById('preview-notes'),
                count: document.getElementById('char-count')
            };

            function updatePreview() {
                // Date
                if(inputs.date.value) {
                    const d = new Date(inputs.date.value);
                    displays.date.innerText = d.toLocaleDateString() + ' ' + d.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                }
                
                // Motif
                displays.motif.innerText = inputs.motif.value || 'À définir';
                
                // Notes
                const n = inputs.notes.value;
                displays.notes.innerText = n ? (n.substring(0, 80) + (n.length > 80 ? '...' : '')) : '...';
                displays.count.innerText = n.length + ' chars';
            }

            Object.values(inputs).forEach(el => el.addEventListener('input', updatePreview));
            updatePreview(); // Run once

            // --- 3. Chips Logic ---
            document.querySelectorAll('.chip').forEach(chip => {
                chip.addEventListener('click', function() {
                    const targetId = this.dataset.target; // 'Motif' or 'Notes'
                    const val = this.dataset.val;
                    const append = this.dataset.append === 'true';
                    
                    const input = document.getElementById(targetId);
                    if(input) {
                        if(append) {
                            // Add new line if not empty
                            input.value += (input.value ? '\n' : '') + val;
                        } else {
                            input.value = val;
                        }
                        updatePreview(); // Update visuals
                    }
                });
            });

        });
    </script>
}