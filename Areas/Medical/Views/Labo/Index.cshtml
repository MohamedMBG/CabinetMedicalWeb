@model IEnumerable<CabinetMedicalWeb.Models.ResultatExamen>

@{
    ViewData["Title"] = "Résultats de Laboratoire - " + ViewBag.PatientName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var primaryColor = "#10B981"; // Emerald/Teal for Labs
}

<style>
    body { background-color: #F0FDFA; font-family: 'Inter', sans-serif; }
    
    .lab-gallery-header {
        background: linear-gradient(135deg, @primaryColor 0%, #059669 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(16, 185, 129, 0.2);
    }

    .lab-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        transition: transform 0.2s;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .lab-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
    }

    .lab-img-container {
        height: 200px;
        background-color: #F3F4F6;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-bottom: 1px solid #E5E7EB;
        position: relative;
    }

    .lab-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }
    
    .lab-card:hover .lab-img {
        transform: scale(1.05);
    }

    .lab-icon-overlay {
        position: absolute;
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .lab-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .lab-date {
        font-size: 0.85rem;
        color: #6B7280;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .lab-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #111827;
        margin-bottom: 0.5rem;
    }

    .lab-result {
        font-size: 0.95rem;
        color: #4B5563;
        margin-bottom: 1rem;
        flex-grow: 1;
        /* Line clamp for description */
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .btn-view {
        width: 100%;
        padding: 0.75rem;
        border-radius: 10px;
        font-weight: 600;
        text-align: center;
        background-color: #ECFDF5;
        color: @primaryColor;
        border: 1px solid #D1FAE5;
        transition: all 0.2s;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .btn-view:hover {
        background-color: @primaryColor;
        color: white;
    }
</style>

<div class="container py-5">
    
    <div class="lab-gallery-header d-flex justify-content-between align-items-center">
        <div>
            <h1 class="fw-bold mb-1">Résultats de Laboratoire</h1>
            <p class="mb-0 opacity-90">Patient : @ViewBag.PatientName</p>
        </div>
        <a href="@Url.Action("Details", "DossierMedicals", new { area = "Medical", id = ViewBag.DossierId })" class="btn btn-light text-success fw-bold px-4 py-2 rounded-pill shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Retour au Dossier
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-flask fa-3x text-muted opacity-25 mb-3"></i>
            <h4 class="text-muted">Aucun résultat d'examen enregistré.</h4>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="lab-card">
                        <!-- Image Preview Area -->
                        <div class="lab-img-container">
                            @if (!string.IsNullOrEmpty(item.ScanUrl))
                            {
                                if (item.ScanUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                                {
                                    <div class="lab-icon-overlay text-danger">
                                        <i class="fas fa-file-pdf fa-lg"></i>
                                    </div>
                                    <div class="text-muted small mt-5">Document PDF</div>
                                }
                                else
                                {
                                    <img src="@item.ScanUrl" alt="Scan" class="lab-img" />
                                    <div class="lab-icon-overlay text-success" style="opacity:0; transition:opacity 0.2s;">
                                        <i class="fas fa-search-plus"></i>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="lab-icon-overlay text-muted">
                                    <i class="fas fa-file-alt fa-lg"></i>
                                </div>
                            }
                        </div>

                        <div class="lab-body">
                            <div class="lab-date">
                                <i class="far fa-calendar-alt me-1"></i> @item.DateExamen.ToString("dd MMMM yyyy")
                            </div>
                            <h3 class="lab-title">@item.TypeExamen</h3>
                            <div class="lab-result">
                                @item.Resultat
                            </div>
                            
                            @if (!string.IsNullOrEmpty(item.ScanUrl))
                            {
                                <a href="@item.ScanUrl" target="_blank" class="btn-view mt-auto">
                                    <i class="fas fa-eye"></i> Voir le document
                                </a>
                            }
                            else
                            {
                                <button class="btn-view mt-auto disabled" style="opacity:0.5; cursor:default;">
                                    <i class="fas fa-eye-slash"></i> Pas de document
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>