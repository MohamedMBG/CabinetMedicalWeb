@model CabinetMedicalWeb.Areas.Medical.Models.DossierCompletViewModel

@{
    ViewData["Title"] = "Dossier " + Model.PatientInfo.Nom;

    var age = (int)Math.Floor((DateTime.Now - Model.PatientInfo.DateNaissance).TotalDays / 365.25);
    var consultationsCount = Model.Consultations.Count();
    var prescriptionsCount = Model.Prescriptions.Count();
    var examensCount = Model.Examens.Count();
}

<style>
    .dossier-hero {
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.12), rgba(14, 165, 233, 0.12));
        border: 1px solid rgba(255, 255, 255, 0.6);
        box-shadow: var(--shadow-md);
        border-radius: var(--radius-lg);
        padding: 1.75rem;
    }

    .patient-avatar {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        background: linear-gradient(135deg, #4F46E5, #818CF8);
        color: white;
        font-weight: 700;
        font-size: 1.4rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 20px rgba(79, 70, 229, 0.3);
    }

    .chip {
        padding: 0.45rem 0.9rem;
        border-radius: var(--radius-full);
        font-weight: 600;
        font-size: 0.85rem;
        color: var(--text-main);
        background: rgba(79, 70, 229, 0.08);
        border: 1px solid rgba(79, 70, 229, 0.15);
    }

    .action-btn {
        padding: 0.65rem 1rem;
        border-radius: var(--radius-md);
        border: 1px solid #E5E7EB;
        background: white;
        box-shadow: var(--shadow-sm);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.55rem;
        color: var(--text-main);
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            color: var(--color-primary);
        }

    .mini-card {
        background: var(--bg-surface);
        border-radius: var(--radius-md);
        padding: 1rem 1.25rem;
        border: 1px solid rgba(0, 0, 0, 0.04);
        box-shadow: var(--shadow-sm);
        height: 100%;
    }

    .mini-card .icon {
        width: 36px;
        height: 36px;
        border-radius: 12px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: rgba(79, 70, 229, 0.08);
        color: #4F46E5;
    }

    .section-title {
        font-size: 0.95rem;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        color: var(--text-muted);
        font-weight: 700;
        border-bottom: 1px solid #E5E7EB;
        padding-bottom: 0.65rem;
        margin-bottom: 1.1rem;
    }

    .timeline {
        border-left: 2px solid #E5E7EB;
        padding-left: 1rem;
        margin-left: 0.35rem;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.4rem;
    }

        .timeline-item:last-child {
            padding-bottom: 0.25rem;
        }

    .timeline-dot {
        position: absolute;
        left: -1.25rem;
        top: 0.2rem;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #4F46E5;
        border: 2px solid white;
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.12);
    }

    .list-tile {
        padding: 0.9rem 1rem;
        border-radius: var(--radius-md);
        border: 1px solid #E5E7EB;
        background: white;
        box-shadow: var(--shadow-sm);
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

        .list-tile:hover {
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

    .empty-state {
        color: var(--text-muted);
        font-size: 0.95rem;
    }
</style>

<div class="dossier-hero mb-4">
    <div class="d-flex flex-wrap align-items-start gap-3 justify-content-between">
        <div class="d-flex gap-3 align-items-center">
            <div class="patient-avatar">
                @Model.PatientInfo.Nom.Substring(0, 1)@Model.PatientInfo.Prenom.Substring(0, 1)
            </div>
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <h1 class="h4 fw-bold mb-0">@Model.PatientInfo.Nom @Model.PatientInfo.Prenom</h1>
                    <span class="badge bg-white text-primary border">@age ans</span>
                </div>
                <div class="text-muted small">Dossier #@Model.DossierId</div>
                <div class="d-flex flex-wrap gap-2 mt-2">
                    <span class="chip"><i class="fas fa-birthday-cake me-2"></i>@Model.PatientInfo.DateNaissance.ToShortDateString()</span>
                    <span class="chip"><i class="fas fa-phone me-2"></i>@Model.PatientInfo.Telephone</span>
                    <span class="chip"><i class="fas fa-envelope me-2"></i>@Model.PatientInfo.Email</span>
                </div>
            </div>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a href="@Url.Action("Create", "Consultation", new { area = "Medical", dossierId = Model.DossierId })" class="action-btn">
                <i class="fas fa-stethoscope text-primary"></i> Nouvelle consultation
            </a>
            <a href="@Url.Action("Create", "Prescription", new { area = "Medical", dossierId = Model.DossierId })" class="action-btn">
                <i class="fas fa-file-prescription text-primary"></i> Ordonnance
            </a>
            <a href="@Url.Action("Create", "Labo", new { area = "Medical", dossierId = Model.DossierId })" class="action-btn">
                <i class="fas fa-microscope text-primary"></i> Résultat labo
            </a>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.PatientInfo.AntecedentsMedicaux))
{
    <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center gap-2 py-2 px-3 mb-4">
        <i class="fas fa-exclamation-triangle text-warning"></i>
        <div><strong>Alertes médicales :</strong> @Model.PatientInfo.AntecedentsMedicaux</div>
    </div>
}

<div class="row g-3 mb-3">
    <div class="col-md-4">
        <div class="mini-card d-flex gap-3 align-items-center">
            <div class="icon"><i class="fas fa-notes-medical"></i></div>
            <div>
                <div class="text-muted small">Consultations</div>
                <div class="h5 fw-bold mb-0">@consultationsCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-card d-flex gap-3 align-items-center">
            <div class="icon"><i class="fas fa-prescription-bottle-alt"></i></div>
            <div>
                <div class="text-muted small">Ordonnances</div>
                <div class="h5 fw-bold mb-0">@prescriptionsCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-card d-flex gap-3 align-items-center">
            <div class="icon"><i class="fas fa-flask"></i></div>
            <div>
                <div class="text-muted small">Examens labo</div>
                <div class="h5 fw-bold mb-0">@examensCount</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="glass-card p-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="section-title mb-0"><i class="fas fa-history me-2"></i>Historique des consultations</div>
            </div>

            @if (Model.Consultations.Any())
            {
                <div class="timeline">
                    @foreach (var consult in Model.Consultations)
                    {
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="fw-bold">@consult.Motif</span>
                                <span class="badge bg-light text-muted border">@consult.Date.ToShortDateString()</span>
                            </div>
                            <p class="text-muted small mb-2">@consult.Notes</p>
                            <span class="badge bg-primary-subtle text-primary">Dr. @(consult.Doctor?.Nom ?? consult.DoctorId)</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4 empty-state">Aucune consultation enregistrée.</div>
            }
        </div>
    </div>

    <div class="col-lg-5">
        <div class="d-flex flex-column gap-3 h-100">
            <div class="glass-card p-3">
                <div class="section-title mb-0"><i class="fas fa-pills me-2"></i>Ordonnances récentes</div>
                @if (Model.Prescriptions.Any())
                {
                    <div class="d-flex flex-column gap-2 mt-2">
                        @foreach (var presc in Model.Prescriptions)
                        {
                            <div class="list-tile d-flex justify-content-between align-items-start gap-3">
                                <div class="small">
                                    <div class="fw-bold">@presc.DatePrescription.ToShortDateString()</div>
                                    <div class="text-muted text-truncate" style="max-width: 240px;">@presc.Medicaments</div>
                                </div>
                                <a href="@Url.Action("Print", "Prescription", new { area = "Medical", id = presc.IdPrescription })" target="_blank" class="text-success" title="Imprimer">
                                    <i class="fas fa-print"></i>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3 empty-state">Aucune ordonnance disponible.</div>
                }
            </div>

            <div class="glass-card p-3">
                <div class="section-title mb-0"><i class="fas fa-flask me-2"></i>Résultats labo</div>
                @if (Model.Examens.Any())
                {
                    <div class="d-flex flex-column gap-2 mt-2">
                        @foreach (var exam in Model.Examens)
                        {
                            <div class="list-tile">
                                <div class="d-flex justify-content-between small mb-1">
                                    <span class="fw-bold text-primary">@exam.TypeExamen</span>
                                    <span class="text-muted">@exam.DateExamen.ToShortDateString()</span>
                                </div>
                                <div class="small text-muted">@exam.Resultat</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3 empty-state">Aucun résultat de laboratoire.</div>
                }
            </div>
        </div>
    </div>
</div>
