@model CabinetMedicalWeb.Areas.Medical.Models.DossierCompletViewModel

@{
    ViewData["Title"] = "Dossier " + Model.PatientInfo.Nom;

    // Palette Compacte & Moderne
    var colorPrimary = "#4F46E5";
    var colorSecondary = "#6366F1";
    var colorBg = "#F3F4F6";
    var colorCard = "#FFFFFF";
    var textDark = "#111827";
    var textMuted = "#6B7280";
    var colorDanger = "#EF4444";
    var colorSuccess = "#10B981";
    var colorInfo = "#0EA5E9";
}

<style>
    body {
        background-color: @colorBg;
        font-family: 'Inter', system-ui, sans-serif;
        font-size: 0.9rem;
    }

    .compact-card {
        background-color: @colorCard;
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.05);
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        overflow: hidden;
        height: 100%;
    }

    .patient-header-compact {
        background: linear-gradient(135deg, @colorPrimary 0%, @colorSecondary 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 0 0 16px 16px;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.1);
    }

    .btn-action-sm {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none !important;
        transition: all 0.2s;
        cursor: pointer;
    }

    .btn-primary-soft {
        background-color: rgba(255,255,255,0.2);
        color: white;
        backdrop-filter: blur(5px);
    }

        .btn-primary-soft:hover {
            background-color: rgba(255,255,255,0.3);
            color: white;
        }

    .timeline-compact {
        border-left: 2px solid #E5E7EB;
        padding-left: 1rem;
        margin-left: 0.5rem;
    }

    .timeline-item-compact {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline-dot {
        position: absolute;
        left: -1.35rem;
        top: 0.2rem;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: @colorPrimary;
        border: 2px solid white;
    }
</style>

<!-- 1. EN-TÊTE COMPACT -->
<div class="patient-header-compact">
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-start">
            <div class="d-flex gap-3 align-items-center">
                <div class="d-flex align-items-center justify-content-center rounded-circle bg-white text-primary fw-bold"
                     style="width: 48px; height: 48px; font-size: 1.2rem;">
                    @Model.PatientInfo.Nom.Substring(0, 1)@Model.PatientInfo.Prenom.Substring(0, 1)
                </div>
                <div>
                    <h2 class="h5 fw-bold mb-0">@Model.PatientInfo.Nom @Model.PatientInfo.Prenom</h2>
                    <div class="d-flex gap-3 text-white-50 small mt-1">
                        <span><i class="fas fa-birthday-cake me-1"></i> @Model.PatientInfo.DateNaissance.ToShortDateString()</span>
                        <span><i class="fas fa-phone me-1"></i> @Model.PatientInfo.Telephone</span>
                        <span><i class="fas fa-envelope me-1"></i> @Model.PatientInfo.Email</span>
                    </div>
                </div>
            </div>

            <!-- Actions Rapides -->
            <div class="d-flex gap-2">
                <a href="@Url.Action("Create", "Consultation", new { area = "Medical", dossierId = Model.DossierId })"
                   class="btn-action-sm btn-primary-soft">
                    <i class="fas fa-stethoscope"></i> Consultation
                </a>
                <a href="@Url.Action("Create", "Prescription", new { area = "Medical", dossierId = Model.DossierId })"
                   class="btn-action-sm btn-primary-soft">
                    <i class="fas fa-file-prescription"></i> Ordonnance
                </a>
                <a href="@Url.Action("Create", "Labo", new { area = "Medical", dossierId = Model.DossierId })"
                   class="btn-action-sm btn-primary-soft">
                    <i class="fas fa-microscope"></i> Labo
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-4 pb-4">

    @if (!string.IsNullOrEmpty(Model.PatientInfo.AntecedentsMedicaux))
    {
        <div class="alert py-2 px-3 mb-4 rounded-3 d-flex align-items-center gap-2 small"
             style="background-color: #FEF2F2; color: @colorDanger; border: 1px solid #FECACA;">
            <i class="fas fa-exclamation-circle"></i>
            <strong>Alertes Médicales :</strong> @Model.PatientInfo.AntecedentsMedicaux
        </div>
    }

    <div class="row g-3">

        <!-- GAUCHE : CONSULTATIONS -->
        <div class="col-lg-7">
            <div class="compact-card p-3">
                <h6 class="fw-bold mb-3 text-uppercase text-muted small border-bottom pb-2">
                    <i class="fas fa-history me-2"></i>Historique Consultations
                </h6>

                @if (Model.Consultations.Any())
                {
                    <div class="timeline-compact">
                        @foreach (var consult in Model.Consultations)
                        {
                            <div class="timeline-item-compact">
                                <div class="timeline-dot"></div>
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="fw-bold text-dark">@consult.Motif</span>
                                    <small class="text-muted">@consult.Date.ToShortDateString()</small>
                                </div>
                                <p class="text-muted small mb-1">@consult.Notes</p>
                                <span class="badge bg-light text-secondary border">Dr. @(consult.Doctor?.Nom ?? consult.DoctorId)</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted small">Aucune consultation.</div>
                }
            </div>
        </div>

        <!-- DROITE : PRESCRIPTIONS & LABO -->
        <div class="col-lg-5">
            <div class="d-flex flex-column gap-3 h-100">

                <!-- Prescriptions -->
                <div class="compact-card p-3">
                    <h6 class="fw-bold mb-3 text-uppercase text-muted small border-bottom pb-2">
                        <i class="fas fa-pills me-2"></i>Ordonnances Récentes
                    </h6>
                    @if (Model.Prescriptions.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var presc in Model.Prescriptions)
                            {
                                <li class="d-flex justify-content-between align-items-center mb-2 p-2 rounded bg-light">
                                    <div class="small">
                                        <div class="fw-bold text-dark">@presc.DatePrescription.ToShortDateString()</div>
                                        <div class="text-muted text-truncate" style="max-width: 200px;">@presc.Medicaments</div>
                                    </div>

                                    <!-- CORRECTION ICI : IdPrescription au lieu de Id -->
                                    <a href="@Url.Action("Print", "Prescription", new { area = "Medical", id = presc.IdPrescription })"
                                       target="_blank" class="btn btn-sm text-success" title="Imprimer">
                                        <i class="fas fa-print"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-2 text-muted small">Vide</div>
                    }
                </div>

                <!-- Labo -->
                <div class="compact-card p-3">
                    <h6 class="fw-bold mb-3 text-uppercase text-muted small border-bottom pb-2">
                        <i class="fas fa-flask me-2"></i>Résultats Labo
                    </h6>
                    @if (Model.Examens.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var exam in Model.Examens)
                            {
                                <li class="mb-2 p-2 rounded border border-light">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <span class="fw-bold" style="color: @colorInfo;">@exam.TypeExamen</span>
                                        <span class="text-muted">@exam.DateExamen.ToShortDateString()</span>
                                    </div>
                                    <div class="small text-muted text-truncate">@exam.Resultat</div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-2 text-muted small">Vide</div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>