@model IEnumerable<CabinetMedicalWeb.Models.DossierMedical>

@{
    ViewData["Title"] = "Medical Records";

    // Dental Clinic Color Palette
    var colorPrimary = "#91B3D9";
    var colorSecondary = "#7AA3D1";
    var colorBg = "#E9EFF7";
    var colorCard = "#FFFFFF";
    var textDark = "#666B72";
    var textMuted = "#989DA5";
    var borderSubtle = "rgba(0, 0, 0, 0.05)";
}

<style>
    body {
        background-color: @colorBg;
        font-family: 'Inter', system-ui, sans-serif;
    }

    .glass-card {
        background-color: @colorCard;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
        border: 1px solid @borderSubtle;
        overflow: hidden;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    /* Table Styling */
    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-modern thead th {
            background-color: #F9FAFB;
            color: @textMuted;
            font-weight: 600;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #E5E7EB;
            text-align: left;
        }

        .table-modern tbody tr {
            transition: background-color 0.2s;
        }

            .table-modern tbody tr:hover {
                background-color: #F8FAFC;
            }

        .table-modern td {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #F3F4F6;
            color: @textDark;
            vertical-align: middle;
        }

        .table-modern tbody tr:last-child td {
            border-bottom: none;
        }

    /* Avatar Initials */
    .avatar-initials {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, @colorPrimary 0%, @colorSecondary 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
        margin-right: 1rem;
    }

    /* Action Buttons */
    .btn-icon {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-view {
        background-color: rgba(145, 179, 217, 0.15);
        color: @colorPrimary;
    }

        .btn-view:hover {
            background-color: @colorPrimary;
            color: white;
        }

    .btn-delete {
        background-color: #FEF2F2;
        color: #EF4444;
    }

        .btn-delete:hover {
            background-color: #EF4444;
            color: white;
        }

    .btn-create {
        background-color: @colorPrimary;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 4px 6px rgba(145, 179, 217, 0.3);
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: transform 0.2s;
        text-decoration: none;
    }

        .btn-create:hover {
            background-color: @colorSecondary;
            transform: translateY(-1px);
            color: white;
        }

</style>

<div class="container py-5" style="min-height: 100vh;">

    <!-- Header Section -->
    <div class="page-header">
        <div>
            <h1 class="h3 fw-bold mb-1" style="color: @textDark;">Medical Records</h1>
            <p class="text-muted mb-0">Manage patient records and access medical history.</p>
        </div>
        <a href="@Url.Action("Create", "DossierMedicals", new { area = "Medical" })" class="btn-create">
            <i class="fas fa-plus"></i> New Record
        </a>
    </div>

    <!-- Search Bar -->
    <div class="mb-4">
        <form method="get" action="@Url.Action("Index", "DossierMedicals", new { area = "Medical" })" class="d-flex gap-2">
            <div class="flex-grow-1 position-relative">
                <i class="fas fa-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: @textMuted; z-index: 10;"></i>
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" 
                       class="form-control" placeholder="Search by patient name, phone, or email..." 
                       style="padding-left: 2.5rem; border-radius: 12px; border: 1px solid rgba(0,0,0,0.1);">
            </div>
            <button type="submit" class="btn" style="background-color: @colorPrimary; color: white; border-radius: 12px;">
                <i class="fas fa-search me-2"></i>Search
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <a href="@Url.Action("Index", "DossierMedicals", new { area = "Medical" })" class="btn btn-secondary" style="border-radius: 12px;">
                    <i class="fas fa-times me-2"></i>Clear
                </a>
            }
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 12px;">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Main Content Card -->
    <div class="glass-card">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px; background-color: #F3F4F6; color: #9CA3AF;">
                        <i class="fas fa-folder-open fa-2x"></i>
                    </div>
                </div>
                <h5 class="fw-bold" style="color: @textDark;">No records found</h5>
                <p class="text-muted mb-4">Start by creating a medical record for an existing patient.</p>
                <a href="@Url.Action("Create", "DossierMedicals", new { area = "Medical" })" class="btn-create">
                    Create First Record
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table-modern">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Contact</th>
                            <th>Last Visit</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var nom = item.Patient?.Nom ?? "Inconnu";
                            var prenom = item.Patient?.Prenom ?? "";
                            var initials = (nom.Length > 0 ? nom[0].ToString() : "") + (prenom.Length > 0 ? prenom[0].ToString() : "");

                            <tr style="cursor: pointer;" onclick="window.location='@Url.Action("Details", "DossierMedicals", new { area = "Medical", id = item.Id })'">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-initials">@initials</div>
                                        <div>
                                            <div class="fw-bold">@nom @prenom</div>
                                            <small class="text-muted">Born: @(item.Patient?.DateNaissance.ToShortDateString() ?? "N/A")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="small"><i class="fas fa-phone me-2 text-muted"></i>@(item.Patient?.Telephone ?? "N/A")</span>
                                        <span class="small"><i class="fas fa-envelope me-2 text-muted"></i>@(item.Patient?.Email ?? "N/A")</span>
                                    </div>
                                </td>
                                <td>
                                    <!-- Placeholder pour la date de dernière consult si disponible, sinon statique -->
                                    <span class="badge bg-light text-dark border">
                                        @(item.Consultations != null && item.Consultations.Any()
                                                                        ? item.Consultations.OrderByDescending(c => c.Date).First().Date.ToShortDateString()
                                                                        : "None")
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-2" onclick="event.stopPropagation();">
                                <a href="@Url.Action("Details", "DossierMedicals", new { area = "Medical", id = item.Id })"
                                   class="btn-icon btn-view" title="Open Dashboard">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                                <a href="@Url.Action("Delete", "DossierMedicals", new { area = "Medical", id = item.Id })"
                                   class="btn-icon btn-delete" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>