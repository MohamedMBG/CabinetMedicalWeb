@model CabinetMedicalWeb.Models.DossierMedical

@{
    ViewData["Title"] = "Delete Medical Record";
    var colorPrimary = "#DC3545"; // Red for deletion
    var colorSecondary = "#6C757D"; // Gray for cancel
    var bgPage = "#E9EFF7";
    var textDark = "#343A40";
    var patientName = (Model.Patient?.Nom ?? "N/A") + " " + (Model.Patient?.Prenom ?? "");
}

<style>
    body {
        background-color: @bgPage;
        font-family: 'Inter', system-ui, sans-serif;
    }

    .delete-card {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 2px solid rgba(220, 53, 69, 0.4);
    }

    .delete-header {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .delete-header-icon {
        font-size: 2rem;
    }

    .delete-body {
        padding: 2.5rem;
    }

    .patient-info {
        background-color: #F8F9FA;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: center;
        border: 1px solid #DEE2E6;
    }

    .patient-avatar {
        width: 80px;
        height: 80px;
        background-color: #E9ECEF;
        color: #495057;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 2rem;
        margin: 0 auto 1rem;
    }

    .btn-delete-confirm {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(220, 53, 69, 0.3);
    }

    .btn-delete-confirm:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(220, 53, 69, 0.4);
        color: white;
    }
    
    .btn-cancel {
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
    }

</style>

<div class="container py-5" style="max-width: 700px;">
    <div class="delete-card">
        <div class="delete-header">
            <i class="fas fa-exclamation-triangle delete-header-icon"></i>
            <div>
                <h3 class="mb-0 fw-bold">Confirm Deletion</h3>
                <p class="mb-0 opacity-75">This action is permanent and cannot be undone.</p>
            </div>
        </div>
        <div class="delete-body">
            <p class="lead text-center mb-4" style="color: @textDark;">
                Are you absolutely sure you want to delete the medical record for this patient?
            </p>

            <div class="patient-info">
                <div class="patient-avatar">
                     @if (!string.IsNullOrEmpty(Model.Patient?.Nom) && !string.IsNullOrEmpty(Model.Patient?.Prenom))
                    {
                        <span>@Model.Patient.Nom.Substring(0, 1)@Model.Patient.Prenom.Substring(0, 1)</span>
                    }
                    else
                    {
                        <i class="fas fa-user"></i>
                    }
                </div>
                <h4 class="fw-bold" style="color: @textDark;">@patientName</h4>
                <div class="text-muted">
                    Record ID: @Model.Id
                </div>
            </div>
            
            <p class="text-muted small text-center mb-4">
                Deleting this record will permanently remove all associated consultations, prescriptions, and lab results. This data cannot be recovered.
            </p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-delete-confirm w-100">
                        <i class="fas fa-trash-alt me-2"></i>Yes, I'm Sure - Delete This Record
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-cancel w-100">
                        <i class="fas fa-times me-2"></i>No, Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
