@model CabinetMedicalWeb.Models.DossierMedical

@{
    ViewData["Title"] = "Delete Medical Record";
}

<div class="container py-5">
    <div class="card shadow-sm" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header text-white" style="background-color: #A7CBED;">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Medical Record</h4>
        </div>
        <div class="card-body" style="background-color: #E9EFF7;">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> Are you sure you want to delete this medical record? This action cannot be undone.
            </div>
            
            <dl class="row mb-4">
                <dt class="col-sm-4" style="color: #666B72;">Patient:</dt>
                <dd class="col-sm-8">
                    <strong>@(Model.Patient?.Nom ?? "N/A") @(Model.Patient?.Prenom ?? "")</strong>
                </dd>
            </dl>
            
            <form asp-action="Delete" class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Delete Record
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>
