@model CabinetMedicalWeb.Areas.Admin.Models.UserViewModel

@{
    ViewData["Title"] = "Créer un Compte";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var primaryColor = "#6366F1";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header text-white p-4" style="background: linear-gradient(135deg, @primaryColor 0%, #818CF8 100%);">
                    <h3 class="mb-0 fw-bold"><i class="fas fa-user-plus me-2"></i>Nouveau Personnel</h3>
                    <p class="mb-0 opacity-75 small">Ajouter un Médecin ou une Secrétaire</p>
                </div>
                
                <div class="card-body p-5 bg-white">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Identity -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Nom" class="form-label fw-bold small text-uppercase text-muted">Nom</label>
                                <input asp-for="Nom" class="form-control form-control-lg bg-light border-0" placeholder="ex: House" />
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Prenom" class="form-label fw-bold small text-uppercase text-muted">Prénom</label>
                                <input asp-for="Prenom" class="form-control form-control-lg bg-light border-0" placeholder="ex: Gregory" />
                                <span asp-validation-for="Prenom" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Login Info -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold small text-uppercase text-muted">Email (Identifiant)</label>
                            <div class="input-group">
                                <span class="input-group-text border-0 bg-light"><i class="fas fa-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control form-control-lg bg-light border-0" placeholder="ex: medecin@cabinet.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label fw-bold small text-uppercase text-muted">Rôle</label>
                            <select asp-for="Role" asp-items="Model.RolesList" class="form-select form-select-lg bg-light border-0" id="roleSelect">
                                <option value="">-- Sélectionner un rôle --</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <!-- Specialty (Hidden by default) -->
                        <div class="mb-4 collapse" id="specialiteGroup">
                            <label asp-for="Specialite" class="form-label fw-bold small text-uppercase text-primary">Spécialité Médicale</label>
                            <input asp-for="Specialite" class="form-control form-control-lg border-primary" placeholder="ex: Cardiologie, Généraliste..." />
                            <div class="form-text text-primary">Requis uniquement pour les médecins.</div>
                        </div>
                        
                        <!-- Password -->
                        <div class="mb-4 pt-3 border-top">
                            <label asp-for="Password" class="form-label fw-bold small text-uppercase text-muted">Mot de passe</label>
                            <input asp-for="Password" class="form-control bg-light border-0" placeholder="Laisser vide pour défaut: Password123!" />
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">Annuler</a>
                            <button type="submit" class="btn btn-lg text-white fw-bold px-5" style="background-color: @primaryColor; border-radius: 12px;">
                                Créer le Compte
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Simple script to show/hide Specialty field based on Role
        document.addEventListener("DOMContentLoaded", function() {
            var roleSelect = document.getElementById("roleSelect");
            var specGroup = document.getElementById("specialiteGroup");

            function toggleSpecialty() {
                if (roleSelect.value === "Medecin") {
                    specGroup.classList.add("show");
                } else {
                    specGroup.classList.remove("show");
                }
            }

            roleSelect.addEventListener("change", toggleSpecialty);
        });
    </script>
}