@using System.Linq
@model CabinetMedicalWeb.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --ink: #0f172a;
        --muted: #64748b;
        --surface: rgba(255, 255, 255, 0.95);
        --border: rgba(122, 165, 255, 0.15);
        --glow: 0 10px 40px -10px rgba(99, 102, 241, 0.15);
        --primary-grad: linear-gradient(135deg, #6366f1, #4f46e5);
        --bg-grad: radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.08), transparent 40%),
                   radial-gradient(circle at 90% 10%, rgba(14, 165, 233, 0.08), transparent 40%),
                   linear-gradient(180deg, #f8fafc, #f1f5f9);
    }

    /* Animation Keyframes */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .dashboard-shell {
        background: var(--bg-grad);
        min-height: 100vh;
        padding: 2.5rem 0 4rem;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    /* Staggered Animations */
    .animate-in {
        opacity: 0;
        animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }

    /* Header Section */
    .topline {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .topline h1 {
        font-weight: 800;
        color: var(--ink);
        margin: 0.5rem 0 0.2rem;
        font-size: 2.2rem;
        letter-spacing: -0.03em;
    }

    .eyebrow {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.8rem;
        border-radius: 99px;
        background: rgba(99, 102, 241, 0.1);
        color: #4f46e5;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }

    /* Quick Actions Buttons */
    .quick-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-quick {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 1px solid transparent;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
    }

    .btn-quick-primary {
        background: var(--primary-grad);
        color: white;
        box-shadow: 0 8px 20px -4px rgba(99, 102, 241, 0.4);
    }
    .btn-quick-primary:hover { transform: translateY(-2px); box-shadow: 0 12px 24px -4px rgba(99, 102, 241, 0.5); color: white; }

    .btn-quick-secondary {
        background: white;
        color: var(--ink);
        border-color: #e2e8f0;
    }
    .btn-quick-secondary:hover { background: #f8fafc; border-color: #cbd5e1; color: var(--ink); }

    /* Stats Grid */
    .snapshot {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .snapshot-card {
        background: var(--surface);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 1.5rem;
        border: 1px solid var(--border);
        box-shadow: var(--glow);
        display: flex;
        align-items: center;
        gap: 1.25rem;
        transition: transform 0.2s ease;
    }
    .snapshot-card:hover { transform: translateY(-4px); }

    .snapshot-icon {
        width: 56px; height: 56px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        color: white;
        font-size: 1.4rem;
        flex-shrink: 0;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }
    /* Icon Colors */
    .icon-green { background: linear-gradient(135deg, #10b981, #059669); }
    .icon-orange { background: linear-gradient(135deg, #f59e0b, #d97706); }
    .icon-indigo { background: linear-gradient(135deg, #6366f1, #4f46e5); }
    .icon-cyan { background: linear-gradient(135deg, #06b6d4, #0891b2); }

    .snapshot-content h6 { margin: 0; color: var(--muted); font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em; }
    .snapshot-content p { margin: 0.2rem 0 0; font-size: 1.8rem; font-weight: 800; color: var(--ink); line-height: 1; }

    /* Main Content Layout */
    .grid-balanced {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1.5rem;
    }
    @@media (max-width: 992px) { .grid-balanced { grid-template-columns: 1fr; } }

    /* Cards Generic */
    .panel-card {
        background: var(--surface);
        border-radius: 20px;
        border: 1px solid var(--border);
        box-shadow: 0 4px 20px -2px rgba(0,0,0,0.05);
        overflow: hidden;
        height: 100%;
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
    }

    /* Chart Section */
    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    .chart-header h3 { font-size: 1.2rem; font-weight: 700; margin: 0; color: var(--ink); }
    .badge-soft {
        background: #eff6ff; color: #3b82f6;
        padding: 0.35rem 0.85rem; border-radius: 99px;
        font-weight: 700; font-size: 0.8rem;
    }

    .chart-bars {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
        gap: 1rem;
        align-items: end;
        height: 200px;
        margin-top: auto;
    }

    .bar-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        group: hover;
    }

    .bar-track {
        width: 100%;
        background: #f1f5f9;
        border-radius: 12px;
        height: 160px;
        position: relative;
        overflow: hidden;
        border: 1px solid #e2e8f0;
    }

    .bar-fill {
        position: absolute;
        bottom: 0; left: 0; right: 0;
        background: linear-gradient(to top, #6366f1, #a5b4fc);
        border-radius: 12px;
        transition: height 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        min-height: 4px;
    }

    .bar-label { font-size: 0.8rem; font-weight: 600; color: var(--muted); text-transform: uppercase; }
    .bar-value { font-size: 0.9rem; font-weight: 800; color: var(--ink); margin-bottom: 4px; }

    /* Quick Nav Sidebar */
    .quick-nav-card {
        background: linear-gradient(145deg, #ffffff, #f8fafc);
    }

    .quick-nav-list {
        list-style: none; padding: 0; margin: 0;
        display: flex; flex-direction: column; gap: 0.75rem;
    }

    .quick-nav-item {
        display: flex; justify-content: space-between; align-items: center;
        background: white; padding: 1rem 1.25rem;
        border-radius: 14px;
        border: 1px solid #e2e8f0;
        text-decoration: none;
        transition: all 0.2s;
    }

    .quick-nav-item:hover {
        transform: translateX(4px);
        border-color: #6366f1;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.1);
    }

    .nav-label {
        display: flex; align-items: center; gap: 0.8rem;
        color: var(--ink); font-weight: 600;
    }
    .nav-icon-box {
        width: 36px; height: 36px; border-radius: 10px;
        background: #eff6ff; color: #4f46e5;
        display: grid; place-items: center; font-size: 1rem;
    }
    .nav-arrow { color: #cbd5e1; transition: color 0.2s; }
    .quick-nav-item:hover .nav-arrow { color: #4f46e5; }
</style>

@{
    var maxPrescriptions = Model.PrescriptionsByDay.Any() ? Model.PrescriptionsByDay.Max(p => p.Count) : 0;
}

<div class="dashboard-shell">
    <div class="container" style="max-width: 1200px;">
        
        <!-- Header -->
        <div class="topline animate-in">
            <div>
                <div class="eyebrow"><i class="fas fa-shield-alt"></i> Espace Administrateur</div>
                <h1>Tableau de bord</h1>
                <p class="text-muted mb-0">Vue d'ensemble et gestion de la clinique Aurora.</p>
            </div>
            <div class="quick-actions">
                <a asp-controller="Users" asp-action="Create" asp-area="Admin" class="btn-quick btn-quick-primary">
                    <i class="fas fa-user-plus"></i> Nouvel Utilisateur
                </a>
                <a asp-controller="Users" asp-action="Index" asp-area="Admin" class="btn-quick btn-quick-secondary">
                    <i class="fas fa-users-cog"></i> Gérer le Personnel
                </a>
            </div>
        </div>

        <!-- KPI Snapshots -->
        <div class="snapshot animate-in delay-1">
            <div class="snapshot-card">
                <div class="snapshot-icon icon-green"><i class="fas fa-users"></i></div>
                <div class="snapshot-content">
                    <h6>Patients</h6>
                    <p>@Model.PatientsCount</p>
                </div>
            </div>
            <div class="snapshot-card">
                <div class="snapshot-icon icon-orange"><i class="fas fa-user-md"></i></div>
                <div class="snapshot-content">
                    <h6>Médecins</h6>
                    <p>@Model.DoctorsCount</p>
                </div>
            </div>
            <div class="snapshot-card">
                <div class="snapshot-icon icon-indigo"><i class="fas fa-folder-open"></i></div>
                <div class="snapshot-content">
                    <h6>Dossiers</h6>
                    <p>@Model.MedicalFoldersCount</p>
                </div>
            </div>
            <div class="snapshot-card">
                <div class="snapshot-icon icon-cyan"><i class="fas fa-file-prescription"></i></div>
                <div class="snapshot-content">
                    <h6>Rx (7j)</h6>
                    <p>@Model.PrescriptionsByDay.Sum(p => p.Count)</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="grid-balanced animate-in delay-2">
            
            <!-- Left: Chart -->
            <div class="panel-card">
                <div class="chart-header">
                    <h3><i class="fas fa-chart-bar text-primary me-2"></i>Activité Prescriptions</h3>
                    <div class="badge-soft">Cette semaine</div>
                </div>
                
                <div class="chart-bars">
                    @foreach (var stat in Model.PrescriptionsByDay)
                    {
                        var fill = maxPrescriptions > 0 ? (int)Math.Round((double)stat.Count / maxPrescriptions * 100) : 0;
                        // Avoid 0% height visual glitch
                        if(fill < 5) fill = 5; 
                        
                        <div class="bar-item" title="@stat.Count prescriptions">
                            <span class="bar-value">@stat.Count</span>
                            <div class="bar-track">
                                <div class="bar-fill" style="height: @fill%;"></div>
                            </div>
                            <span class="bar-label">@stat.Date.ToString("ddd", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Right: Navigation -->
            <div class="panel-card quick-nav-card">
                <div class="chart-header">
                    <h3><i class="fas fa-compass text-primary me-2"></i>Accès Rapide</h3>
                </div>
                <ul class="quick-nav-list">
                    <li>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="quick-nav-item">
                            <div class="nav-label">
                                <div class="nav-icon-box"><i class="fas fa-users"></i></div>
                                <span>Annuaire du personnel</span>
                            </div>
                            <i class="fas fa-chevron-right nav-arrow"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Horaires" asp-action="Index" class="quick-nav-item">
                            <div class="nav-label">
                                <div class="nav-icon-box"><i class="fas fa-clock"></i></div>
                                <span>Plannings & Horaires</span>
                            </div>
                            <i class="fas fa-chevron-right nav-arrow"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Conges" asp-action="Index" class="quick-nav-item">
                            <div class="nav-label">
                                <div class="nav-icon-box"><i class="fas fa-plane"></i></div>
                                <span>Gestion des Absences</span>
                            </div>
                            <i class="fas fa-chevron-right nav-arrow"></i>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>