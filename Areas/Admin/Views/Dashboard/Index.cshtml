@using System.Linq
@model CabinetMedicalWeb.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --ink: #0f172a;
        --muted: #64748b;
        --surface: rgba(255, 255, 255, 0.95);
        --border: rgba(122, 165, 255, 0.15);
        --glow: 0 10px 40px -10px rgba(99, 102, 241, 0.15);
        --primary-grad: linear-gradient(135deg, #6366f1, #4f46e5);
        --bg-grad: radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.08), transparent 40%),
                   radial-gradient(circle at 90% 10%, rgba(14, 165, 233, 0.08), transparent 40%),
                   linear-gradient(180deg, #f8fafc, #f1f5f9);
    }

    /* Animation Keyframes */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .dashboard-shell {
        background: var(--bg-grad);
        min-height: 100vh;
        padding: 3.5rem 0 4.5rem;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .dashboard-container {
        max-width: 1260px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Staggered Animations */
    .animate-in {
        opacity: 0;
        animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }

    /* Header Section */
    .topline {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        flex-wrap: wrap;
        gap: 1.75rem;
        margin-bottom: 2.25rem;
    }

    .topline h1 {
        font-weight: 800;
        color: var(--ink);
        margin: 0.5rem 0 0.35rem;
        font-size: 2.3rem;
        letter-spacing: -0.03em;
    }

    .eyebrow {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.45rem 0.9rem;
        border-radius: 99px;
        background: rgba(99, 102, 241, 0.08);
        color: #4f46e5;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }

    .page-intro {
        color: var(--muted);
        max-width: 760px;
        line-height: 1.6;
        font-size: 0.98rem;
        margin-bottom: 0.5rem;
    }

    /* Quick Actions Buttons */
    .quick-actions {
        display: flex;
        gap: 0.85rem;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .btn-quick {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.6rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 1px solid transparent;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
    }

    .btn-quick-primary {
        background: var(--primary-grad);
        color: white;
        box-shadow: 0 8px 20px -4px rgba(99, 102, 241, 0.4);
    }
    .btn-quick-primary:hover { transform: translateY(-2px); box-shadow: 0 12px 24px -4px rgba(99, 102, 241, 0.5); color: white; }

    .btn-quick-secondary {
        background: white;
        color: var(--ink);
        border-color: #e2e8f0;
    }
    .btn-quick-secondary:hover { background: #f8fafc; border-color: #cbd5e1; color: var(--ink); }

    /* Stats Grid */
    .snapshot {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.75rem;
    }

    .snapshot-card {
        background: var(--surface);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 1.6rem;
        border: 1px solid var(--border);
        box-shadow: var(--glow);
        display: flex;
        align-items: center;
        gap: 1.25rem;
        transition: transform 0.2s ease;
    }
    .snapshot-card:hover { transform: translateY(-4px); }

    .snapshot-icon {
        width: 56px; height: 56px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        color: white;
        font-size: 1.4rem;
        flex-shrink: 0;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }
    /* Icon Colors */
    .icon-green { background: linear-gradient(135deg, #10b981, #059669); }
    .icon-orange { background: linear-gradient(135deg, #f59e0b, #d97706); }
    .icon-indigo { background: linear-gradient(135deg, #6366f1, #4f46e5); }
    .icon-cyan { background: linear-gradient(135deg, #06b6d4, #0891b2); }

    .snapshot-content h6 { margin: 0; color: var(--muted); font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em; }
    .snapshot-content p { margin: 0.2rem 0 0; font-size: 1.8rem; font-weight: 800; color: var(--ink); line-height: 1; }

    /* Main Content Layout */
    .grid-balanced {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1.5rem;
    }
    @@media (max-width: 992px) { .grid-balanced { grid-template-columns: 1fr; } }

    /* Cards Generic */
    .panel-card {
        background: var(--surface);
        border-radius: 20px;
        border: 1px solid var(--border);
        box-shadow: 0 4px 20px -2px rgba(0,0,0,0.05);
        overflow: hidden;
        height: 100%;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .section-block {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .section-header h2 {
        margin: 0;
        font-weight: 800;
        color: var(--ink);
        letter-spacing: -0.02em;
    }

    .section-subtext {
        margin: 0;
        color: var(--muted);
        max-width: 720px;
        line-height: 1.6;
    }

    .section-pill {
        padding: 0.4rem 0.85rem;
        border-radius: 999px;
        background: #eef2ff;
        color: #4338ca;
        font-weight: 700;
        font-size: 0.85rem;
    }

    /* Chart Section */
    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    .chart-header h3 { font-size: 1.2rem; font-weight: 700; margin: 0; color: var(--ink); }
    .badge-soft {
        background: #eff6ff; color: #3b82f6;
        padding: 0.35rem 0.85rem; border-radius: 99px;
        font-weight: 700; font-size: 0.8rem;
    }

    .chart-bars {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
        gap: 1rem;
        align-items: end;
        height: 200px;
        margin-top: auto;
    }

    .chart-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.25rem;
    }

    .trend-block {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 14px;
        padding: 1rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.85rem;
    }

    .trend-block h4 {
        margin: 0;
        font-size: 1rem;
        color: var(--ink);
        letter-spacing: -0.01em;
    }

    .trend-row {
        display: grid;
        grid-template-columns: 1fr 3fr;
        gap: 0.75rem;
        align-items: center;
    }

    .trend-label {
        color: var(--muted);
        font-weight: 700;
        font-size: 0.9rem;
    }

    .dual-bar {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.35rem;
    }

    .bar-track-inline {
        width: 100%;
        background: #e2e8f0;
        border-radius: 999px;
        height: 8px;
        position: relative;
        overflow: hidden;
    }

    .bar-fill-inline {
        position: absolute;
        top: 0; left: 0; bottom: 0;
        border-radius: 999px;
        transition: width 0.5s ease;
    }

    .bar-fill-patients {
        background: linear-gradient(90deg, #10b981, #34d399);
    }

    .bar-fill-reservations {
        background: linear-gradient(90deg, #6366f1, #a5b4fc);
    }

    .bar-legend { display: flex; justify-content: flex-end; gap: 0.85rem; color: var(--muted); font-size: 0.85rem; }
    .legend-dot { width: 10px; height: 10px; border-radius: 999px; display: inline-block; }
    .dot-green { background: #22c55e; }
    .dot-indigo { background: #6366f1; }

    .performance-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1.25rem;
    }
    @@media (max-width: 992px) { .performance-grid { grid-template-columns: 1fr; } }

    .doctor-row {
        display: grid;
        grid-template-columns: 1fr 3fr 80px;
        gap: 0.75rem;
        align-items: center;
        padding: 0.85rem 0;
        border-bottom: 1px solid #e2e8f0;
    }

    .doctor-row:last-child { border-bottom: none; }

    .doctor-name { font-weight: 700; color: var(--ink); }
    .doctor-speciality { color: var(--muted); font-size: 0.9rem; }

    .stacked-meter {
        width: 100%;
        height: 10px;
        background: #e2e8f0;
        border-radius: 999px;
        overflow: hidden;
        position: relative;
    }
    .stacked-meter .fill-appointments { background: linear-gradient(90deg, #0ea5e9, #38bdf8); height: 100%; position: absolute; left: 0; top: 0; }
    .stacked-meter .fill-prescriptions { background: linear-gradient(90deg, #a855f7, #c084fc); height: 100%; position: absolute; left: 0; top: 0; opacity: 0.8; }

    .metric-pill { display: inline-flex; align-items: center; gap: 0.35rem; padding: 0.4rem 0.7rem; border-radius: 10px; background: #eef2ff; color: #4f46e5; font-weight: 700; font-size: 0.85rem; }
    .pill-warm { background: #fff7ed; color: #ea580c; }

    .bar-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        group: hover;
    }

    .bar-track {
        width: 100%;
        background: #f1f5f9;
        border-radius: 12px;
        height: 160px;
        position: relative;
        overflow: hidden;
        border: 1px solid #e2e8f0;
    }

    .bar-fill {
        position: absolute;
        bottom: 0; left: 0; right: 0;
        background: linear-gradient(to top, #6366f1, #a5b4fc);
        border-radius: 12px;
        transition: height 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        min-height: 4px;
    }

    .bar-label { font-size: 0.8rem; font-weight: 600; color: var(--muted); text-transform: uppercase; }
    .bar-value { font-size: 0.9rem; font-weight: 800; color: var(--ink); margin-bottom: 4px; }

    /* Quick Nav Sidebar */
    .quick-nav-card {
        background: linear-gradient(145deg, #ffffff, #f8fafc);
    }

    .quick-nav-list {
        list-style: none; padding: 0; margin: 0;
        display: flex; flex-direction: column; gap: 0.75rem;
    }

    .quick-nav-item {
        display: flex; justify-content: space-between; align-items: center;
        background: white; padding: 1rem 1.25rem;
        border-radius: 14px;
        border: 1px solid #e2e8f0;
        text-decoration: none;
        transition: all 0.2s;
    }

    .quick-nav-item:hover {
        transform: translateX(4px);
        border-color: #6366f1;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.1);
    }

    .nav-label {
        display: flex; align-items: center; gap: 0.8rem;
        color: var(--ink); font-weight: 600;
    }
    .nav-icon-box {
        width: 36px; height: 36px; border-radius: 10px;
        background: #eff6ff; color: #4f46e5;
        display: grid; place-items: center; font-size: 1rem;
    }
    .nav-arrow { color: #cbd5e1; transition: color 0.2s; }
    .quick-nav-item:hover .nav-arrow { color: #4f46e5; }
</style>

@{
    var maxPrescriptions = Model.PrescriptionsByDay.Any() ? Model.PrescriptionsByDay.Max(p => p.Count) : 0;
    var weeklyMaxPatients = Model.WeeklyPatientReservations.Any() ? Model.WeeklyPatientReservations.Max(p => p.Patients) : 0;
    var weeklyMaxReservations = Model.WeeklyPatientReservations.Any() ? Model.WeeklyPatientReservations.Max(p => p.Reservations) : 0;
    var monthlyMaxPatients = Model.MonthlyPatientReservations.Any() ? Model.MonthlyPatientReservations.Max(p => p.Patients) : 0;
    var monthlyMaxReservations = Model.MonthlyPatientReservations.Any() ? Model.MonthlyPatientReservations.Max(p => p.Reservations) : 0;
    var doctorMax = Model.DoctorPerformance.Any() ? Model.DoctorPerformance.Max(d => d.Appointments + d.Prescriptions) : 0;
}

<div class="dashboard-shell">
    <div class="dashboard-container">

        <!-- Header -->
        <div class="topline animate-in">
            <div>
                <div class="eyebrow"><i class="fas fa-shield-alt"></i> Espace Administrateur</div>
                <h1>Tableau de bord</h1>
                <p class="page-intro">Un espace aéré pour suivre la clinique Aurora, prioriser les actions urgentes et retrouver rapidement vos indicateurs principaux.</p>
            </div>
            <div class="quick-actions">
                <a asp-controller="Users" asp-action="Create" asp-area="Admin" class="btn-quick btn-quick-primary">
                    <i class="fas fa-user-plus"></i> Nouvel Utilisateur
                </a>
                <a asp-controller="Users" asp-action="Index" asp-area="Admin" class="btn-quick btn-quick-secondary">
                    <i class="fas fa-users-cog"></i> Gérer le Personnel
                </a>
            </div>
        </div>

        <!-- KPI Snapshots -->
        <div class="section-block animate-in delay-1">
            <div class="section-header">
                <div>
                    <span class="section-pill">Vue rapide</span>
                    <h2>Indicateurs clés</h2>
                    <p class="section-subtext">Un coup d'œil sur le volume de patients, l'activité médicale et les prescriptions récentes.</p>
                </div>
            </div>
            <div class="snapshot">
                <div class="snapshot-card">
                    <div class="snapshot-icon icon-green"><i class="fas fa-users"></i></div>
                    <div class="snapshot-content">
                        <h6>Patients</h6>
                        <p>@Model.PatientsCount</p>
                    </div>
                </div>
                <div class="snapshot-card">
                    <div class="snapshot-icon icon-orange"><i class="fas fa-user-md"></i></div>
                    <div class="snapshot-content">
                        <h6>Médecins</h6>
                        <p>@Model.DoctorsCount</p>
                    </div>
                </div>
                <div class="snapshot-card">
                    <div class="snapshot-icon icon-indigo"><i class="fas fa-folder-open"></i></div>
                    <div class="snapshot-content">
                        <h6>Dossiers</h6>
                        <p>@Model.MedicalFoldersCount</p>
                    </div>
                </div>
                <div class="snapshot-card">
                    <div class="snapshot-icon icon-cyan"><i class="fas fa-file-prescription"></i></div>
                    <div class="snapshot-content">
                        <h6>Rx (7j)</h6>
                        <p>@Model.PrescriptionsByDay.Sum(p => p.Count)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-block animate-in delay-2">
            <div class="section-header">
                <div>
                    <span class="section-pill">Flux quotidien</span>
                    <h2>Activité & raccourcis</h2>
                    <p class="section-subtext">Une visualisation claire des prescriptions récentes avec des accès rapides pour naviguer sans surcharge visuelle.</p>
                </div>
            </div>
            <div class="grid-balanced">

                <!-- Left: Chart -->
                <div class="panel-card">
                    <div class="chart-header">
                        <h3><i class="fas fa-chart-bar text-primary me-2"></i>Activité Prescriptions</h3>
                        <div class="badge-soft">Cette semaine</div>
                    </div>

                    <div class="chart-bars">
                        @foreach (var stat in Model.PrescriptionsByDay)
                        {
                            var fill = maxPrescriptions > 0 ? (int)Math.Round((double)stat.Count / maxPrescriptions * 100) : 0;
                            // Avoid 0% height visual glitch
                            if(fill < 5) fill = 5;

                            <div class="bar-item" title="@stat.Count prescriptions">
                                <span class="bar-value">@stat.Count</span>
                                <div class="bar-track">
                                    <div class="bar-fill" style="height: @fill%;"></div>
                                </div>
                                <span class="bar-label">@stat.Date.ToString("ddd", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Right: Navigation -->
                <div class="panel-card quick-nav-card">
                    <div class="chart-header">
                        <h3><i class="fas fa-compass text-primary me-2"></i>Accès Rapide</h3>
                    </div>
                    <ul class="quick-nav-list">
                        <li>
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="quick-nav-item">
                                <div class="nav-label">
                                    <div class="nav-icon-box"><i class="fas fa-users"></i></div>
                                    <span>Annuaire du personnel</span>
                                </div>
                                <i class="fas fa-chevron-right nav-arrow"></i>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Horaires" asp-action="Index" class="quick-nav-item">
                                <div class="nav-label">
                                    <div class="nav-icon-box"><i class="fas fa-clock"></i></div>
                                    <span>Plannings & Horaires</span>
                                </div>
                                <i class="fas fa-chevron-right nav-arrow"></i>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Conges" asp-action="Index" class="quick-nav-item">
                                <div class="nav-label">
                                    <div class="nav-icon-box"><i class="fas fa-plane"></i></div>
                                    <span>Gestion des Absences</span>
                                </div>
                                <i class="fas fa-chevron-right nav-arrow"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="section-block animate-in delay-3">
            <div class="section-header">
                <div>
                    <span class="section-pill">Tendances</span>
                    <h2>Patients & performance</h2>
                    <p class="section-subtext">Plus d'espace pour comparer les volumes hebdomadaires, mensuels et suivre l'efficacité des équipes.</p>
                </div>
            </div>
            <div class="grid-balanced">
                <div class="panel-card">
                    <div class="chart-header">
                        <h3><i class="fas fa-chart-area text-primary me-2"></i>Patients & Réservations</h3>
                        <div class="badge-soft">Vue 6 semaines / 6 mois</div>
                    </div>

                    <div class="bar-legend mb-3">
                        <span><span class="legend-dot dot-green"></span> Patients reçus</span>
                        <span><span class="legend-dot dot-indigo"></span> Réservations</span>
                    </div>

                    <div class="chart-grid">
                        <div class="trend-block">
                            <h4>Hebdomadaire</h4>
                            @foreach (var point in Model.WeeklyPatientReservations)
                            {
                                var patientWidth = weeklyMaxPatients > 0 ? Math.Round((double)point.Patients / weeklyMaxPatients * 100) : 0;
                                var reservationWidth = weeklyMaxReservations > 0 ? Math.Round((double)point.Reservations / weeklyMaxReservations * 100) : 0;
                                <div class="trend-row">
                                    <div class="trend-label">@point.Label</div>
                                    <div class="dual-bar">
                                        <div class="bar-track-inline" title="@point.Patients patients uniques">
                                            <div class="bar-fill-inline bar-fill-patients" style="width: @patientWidth%;"></div>
                                        </div>
                                        <div class="bar-track-inline" title="@point.Reservations réservations">
                                            <div class="bar-fill-inline bar-fill-reservations" style="width: @reservationWidth%;"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="trend-block">
                            <h4>Mensuel</h4>
                            @foreach (var point in Model.MonthlyPatientReservations)
                            {
                                var patientWidth = monthlyMaxPatients > 0 ? Math.Round((double)point.Patients / monthlyMaxPatients * 100) : 0;
                                var reservationWidth = monthlyMaxReservations > 0 ? Math.Round((double)point.Reservations / monthlyMaxReservations * 100) : 0;
                                <div class="trend-row">
                                    <div class="trend-label">@point.Label</div>
                                    <div class="dual-bar">
                                        <div class="bar-track-inline" title="@point.Patients patients uniques">
                                            <div class="bar-fill-inline bar-fill-patients" style="width: @patientWidth%;"></div>
                                        </div>
                                        <div class="bar-track-inline" title="@point.Reservations réservations">
                                            <div class="bar-fill-inline bar-fill-reservations" style="width: @reservationWidth%;"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="panel-card">
                    <div class="chart-header">
                        <h3><i class="fas fa-user-tie text-primary me-2"></i>Performance équipes</h3>
                        <div class="badge-soft">Derniers 30 jours</div>
                    </div>

                    <div class="performance-grid">
                        <div>
                            <h5 class="fw-bold mb-3">Médecins</h5>
                            @foreach (var doc in Model.DoctorPerformance)
                            {
                                var total = doc.Appointments + doc.Prescriptions;
                                var ratio = doctorMax > 0 ? Math.Round((double)total / doctorMax * 100) : 0;
                                var prescriptionsWidth = ratio > 0 ? Math.Round((double)doc.Prescriptions / (doctorMax > 0 ? doctorMax : 1) * 100) : 0;
                                <div class="doctor-row">
                                    <div>
                                        <div class="doctor-name">@doc.Name</div>
                                        <div class="doctor-speciality">@(string.IsNullOrWhiteSpace(doc.Specialite) ? "Généraliste" : doc.Specialite)</div>
                                    </div>
                                    <div>
                                        <div class="stacked-meter" title="@doc.Appointments rendez-vous | @doc.Prescriptions prescriptions">
                                            <div class="fill-appointments" style="width: @ratio%;"></div>
                                            <div class="fill-prescriptions" style="width: @prescriptionsWidth%;"></div>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <div class="metric-pill"><i class="fas fa-calendar-check"></i>@doc.Appointments</div>
                                        <div class="metric-pill pill-warm mt-1"><i class="fas fa-pills"></i>@doc.Prescriptions</div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div>
                            <h5 class="fw-bold mb-3">Secrétariat</h5>
                            <div class="trend-block" style="height: 100%;">
                                <div class="d-flex align-items-center justify-content-between">
                                    <span class="doctor-name">Demandes traitées</span>
                                    <span class="badge-soft">30 derniers jours</span>
                                </div>
