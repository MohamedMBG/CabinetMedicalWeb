@using System.Linq
@model CabinetMedicalWeb.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --ink: #0f172a;
        --muted: #6b7280;
        --surface: rgba(255, 255, 255, 0.9);
        --border: rgba(122, 165, 255, 0.18);
        --glow: 0 15px 50px rgba(99, 102, 241, 0.18);
    }

    .dashboard-shell {
        background: radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.12), transparent 35%),
            radial-gradient(circle at 80% 0%, rgba(14, 165, 233, 0.14), transparent 30%),
            linear-gradient(135deg, #f8fbff, #eef2ff);
        min-height: 100vh;
        padding: 2.5rem 0 3rem;
    }

    .prescriptions-card {
        background: rgba(255, 255, 255, 0.92);
        border-radius: 16px;
        box-shadow: 0 12px 30px rgba(108, 140, 255, 0.12);
        border: 1px solid rgba(122, 165, 255, 0.15);
        padding: 1.5rem;
    }

    .prescriptions-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 0.75rem;
    }

    .topline {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1.5rem;
        align-items: center;
    }

    .topline h1 {
        font-weight: 800;
        color: var(--ink);
        margin-bottom: 0.2rem;
        letter-spacing: -0.02em;
    }

    .eyebrow {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.55rem 0.9rem;
        border-radius: 999px;
        background: rgba(99, 102, 241, 0.12);
        color: #4338ca;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
    }

    .quick-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .btn-quick {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.65rem 1.25rem;
        border-radius: 14px;
        font-weight: 700;
        font-size: 0.95rem;
        text-decoration: none;
        border: 1px solid transparent;
        transition: all 0.2s ease;
    }

    .btn-quick-primary {
        background: linear-gradient(120deg, #6366f1, #4f46e5);
        color: white;
        box-shadow: 0 12px 32px rgba(79, 70, 229, 0.25);
    }

    .btn-quick-primary:hover { transform: translateY(-2px); color: white; }

    .btn-quick-secondary {
        background: white;
        color: var(--ink);
        border: 1px solid #e5e7eb;
    }

    .btn-quick-secondary:hover { background: #f8fafc; }

    .snapshot {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
        margin-top: 1.25rem;
    }

    .snapshot-card {
        background: rgba(255, 255, 255, 0.92);
        border-radius: 18px;
        padding: 1rem 1.1rem;
        border: 1px solid var(--border);
        box-shadow: var(--glow);
        display: flex;
        align-items: center;
        gap: 0.85rem;
    }

    .snapshot-icon {
        width: 46px;
        height: 46px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        color: white;
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
        flex-shrink: 0;
    }

    .snapshot h6 { margin: 0; color: var(--muted); font-weight: 700; font-size: 0.95rem; }
    .snapshot p { margin: 0; font-size: 1.6rem; font-weight: 800; color: var(--ink); }

    .grid-balanced {
        display: grid;
        grid-template-columns: 1.4fr 1fr;
        gap: 1.25rem;
        margin-top: 1.5rem;
    }

    @media (max-width: 992px) { .grid-balanced { grid-template-columns: 1fr; } }

    .prescriptions-card {
        padding: 1.5rem;
    }

    .chart-bars {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
        gap: 0.85rem;
        margin-top: 1rem;
    }

    .bar-item {
        background: #f8fafc;
        border-radius: 14px;
        padding: 0.75rem 0.8rem;
        border: 1px solid #e5e7eb;
        display: grid;
        gap: 0.35rem;
    }

    .bar-track {
        height: 8px;
        border-radius: 999px;
        background: #e5e7eb;
        overflow: hidden;
    }

    .bar-fill {
        height: 100%;
        border-radius: 999px;
        background: linear-gradient(120deg, #6366f1, #22d3ee);
        transition: width 0.3s ease;
    }

    .badge-soft {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        padding: 0.45rem 0.75rem;
        border-radius: 999px;
        background: rgba(99, 102, 241, 0.1);
        color: #4338ca;
        font-weight: 700;
    }

    .btn-quick-secondary:hover {
        background: #f9fafb;
        color: #111827;
        border-color: #d1d5db;
    }

    .quick-nav-card {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.12), rgba(14, 165, 233, 0.12));
        border-radius: 16px;
        padding: 1.4rem;
        border: 1px solid rgba(99, 102, 241, 0.18);
        box-shadow: 0 10px 24px rgba(99, 102, 241, 0.12);
        height: 100%;
    }

    .quick-nav-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .quick-nav-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #fff;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        border: 1px solid rgba(226, 232, 240, 0.9);
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .quick-nav-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.15);
    }

    .quick-nav-item .label {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-weight: 700;
        color: #1f2937;
    }

    .quick-nav-item .pill {
        padding: 0.35rem 0.8rem;
        border-radius: 999px;
        background: #eef2ff;
        color: #4338ca;
        font-weight: 700;
        font-size: 0.85rem;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }
</style>

@{
    var maxPrescriptions = Model.PrescriptionsByDay.Any() ? Model.PrescriptionsByDay.Max(p => p.Count) : 0;
}

<div class="dashboard-shell">
    <div class="container" style="max-width: 1200px;">
        <div class="panel p-4 mb-4">
            <div class="topline">
                <div>
                    <span class="eyebrow"><i class="fas fa-heartbeat"></i> Espace médecin</span>
                    <h1>Tableau de bord</h1>
                    <p class="text-muted mb-0">Une vue claire de l'activité du cabinet en un coup d'œil.</p>
                </div>
                <div class="d-flex flex-column gap-2 align-items-start align-items-md-end">
                    <div class="badge-soft"><i class="fas fa-file-prescription"></i> @Model.PrescriptionsToday prescriptions aujourd'hui</div>
                    <div class="quick-actions">
                        <a asp-controller="Users" asp-action="Create" asp-area="Admin" class="btn-quick btn-quick-primary">
                            <i class="fas fa-user-plus"></i> Nouvel utilisateur
                        </a>
                        <a asp-controller="Users" asp-action="Index" asp-area="Admin" class="btn-quick btn-quick-secondary">
                            <i class="fas fa-users-cog"></i> Gérer le personnel
                        </a>
                    </div>
                </div>
            </div>

            <div class="snapshot">
                <div class="snapshot-card">
                    <div class="snapshot-icon" style="background: linear-gradient(135deg, #22c55e, #16a34a);"><i class="fas fa-users"></i></div>
                    <div>
                        <h6>Patients suivis</h6>
                        <p>@Model.PatientsCount</p>
                    </div>
                </div>
                <div class="snapshot-card">
                    <div class="snapshot-icon" style="background: linear-gradient(135deg, #f59e0b, #f97316);"><i class="fas fa-user-md"></i></div>
                    <div>
                        <h6>Médecins actifs</h6>
                        <p>@Model.DoctorsCount</p>
                    </div>
                </div>
                <div class="snapshot-card">
                    <div class="snapshot-icon" style="background: linear-gradient(135deg, #6366f1, #4f46e5);"><i class="fas fa-folder-open"></i></div>
                    <div>
                        <h6>Dossiers médicaux</h6>
                        <p>@Model.MedicalFoldersCount</p>
                    </div>
                </div>
                <div class="snapshot-card">
                    <div class="snapshot-icon" style="background: linear-gradient(135deg, #22d3ee, #0ea5e9);"><i class="fas fa-prescription"></i></div>
                    <div>
                        <h6>Prescriptions (7 jours)</h6>
                        <p>@Model.PrescriptionsByDay.Sum(p => p.Count)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid-balanced">
            <div class="panel prescriptions-card">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div>
                        <h5 class="mb-1 fw-bold">Tendance des prescriptions</h5>
                        <p class="text-muted mb-0">Répartition sur les 7 derniers jours</p>
                    </div>
                    <span class="pill-date"><i class="far fa-calendar"></i> Semaine en cours</span>
                </div>

                <div class="chart-bars">
                    @foreach (var stat in Model.PrescriptionsByDay)
                    {
                        var fill = maxPrescriptions > 0 ? (int)Math.Round((double)stat.Count / maxPrescriptions * 100) : 0;
                        <div class="bar-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-semibold text-capitalize">@stat.Date.ToString("ddd dd", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</span>
                                <span class="badge bg-primary rounded-pill" style="min-width: 48px;">@stat.Count</span>
                            </div>
                            <div class="bar-track">
                                <div class="bar-fill" style="width: @fill%;"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>

    <div class="row g-4 align-items-stretch mt-1">
        <div class="col-lg-8">
            <div class="prescriptions-card h-100">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h5 class="mb-1">Prescriptions par jour</h5>
                        <p class="text-muted mb-0">Répartition sur les 7 derniers jours</p>
                    </div>
                    <span class="pill-date"><i class="far fa-calendar"></i> Semaine en cours</span>
                </div>
                <ul class="prescriptions-list">
                    @foreach (var stat in Model.PrescriptionsByDay)
                    {
                        <li>
                            <span class="fw-semibold">@stat.Date.ToString("dddd dd MMM", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</span>
                            <span class="badge bg-primary rounded-pill" style="font-size: 0.95rem; min-width: 48px;">@stat.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="quick-nav-card">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <p class="text-uppercase small fw-bold text-secondary mb-1" style="letter-spacing: 0.05em;">Navigation rapide</p>
                        <h5 class="mb-0">Accéder aux sections clés</h5>
                    </div>
                    <span class="pill-date"><i class="far fa-compass"></i></span>
                </div>
                <ul class="quick-nav-list">
                    <li class="quick-nav-item">
                        <span class="label"><i class="fas fa-users-cog text-primary"></i> Gestion du personnel</span>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="pill text-decoration-none">Ouvrir</a>
                    </li>
                    <li class="quick-nav-item">
                        <span class="label"><i class="fas fa-calendar-check text-success"></i> Planning des congés</span>
                        <a asp-area="Admin" asp-controller="Conges" asp-action="Index" class="pill text-decoration-none">Planifier</a>
                    </li>
                    <li class="quick-nav-item">
                        <span class="label"><i class="fas fa-clock text-info"></i> Horaires du personnel</span>
                        <a asp-area="Admin" asp-controller="Horaires" asp-action="Index" class="pill text-decoration-none">Consulter</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
