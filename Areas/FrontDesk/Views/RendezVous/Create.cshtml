@model CabinetMedicalWeb.Models.RendezVous

@{
    ViewData["Title"] = "Nouveau rendez-vous";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Modern Theme Colors
    var colorPrimary = "#7AA3D1";
    var colorBg = "#E9EFF7";
    var textDark = "#1F2937";
}

<style>
    body { background-color: @colorBg; font-family: 'Inter', system-ui, -apple-system, sans-serif; }

    .create-container {
        padding-top: 3rem;
        padding-bottom: 3rem;
        min-height: 100vh;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.08);
        border: 1px solid rgba(255,255,255,0.6);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, @colorPrimary 0%, #91B3D9 100%);
        padding: 3rem;
        color: white;
        position: relative;
    }

    .header-icon-box {
        background: rgba(255,255,255,0.2);
        width: 64px; height: 64px;
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        backdrop-filter: blur(5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .form-label-modern {
        font-weight: 600;
        color: #4B5563;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control-modern, .form-select-modern {
        border-radius: 12px;
        border: 1px solid #E5E7EB;
        background-color: #F9FAFB;
        padding: 0.8rem 1rem;
        width: 100%;
        transition: all 0.2s;
        font-size: 1rem;
    }

    .form-control-modern:focus, .form-select-modern:focus {
        border-color: @colorPrimary;
        background-color: #fff;
        box-shadow: 0 0 0 4px rgba(122, 163, 209, 0.2);
        outline: none;
    }

    .btn-save {
        background: linear-gradient(135deg, @colorPrimary 0%, #6C8CFF 100%);
        color: white;
        border-radius: 12px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        border: none;
        transition: all 0.2s;
        box-shadow: 0 4px 6px rgba(122, 163, 209, 0.3);
        display: inline-flex; align-items: center; gap: 0.5rem;
    }
    
    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(122, 163, 209, 0.4);
        color: white;
    }

    .btn-cancel {
        color: #4B5563;
        font-weight: 600;
        text-decoration: none;
        padding: 0.8rem 2rem;
        border-radius: 12px;
        border: 1px solid transparent;
        transition: all 0.2s;
        display: inline-flex; align-items: center; gap: 0.5rem;
    }
    
    .btn-cancel:hover {
        background-color: #F3F4F6;
        color: #111827;
    }
</style>

<div class="create-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center p-3 animate__animated animate__fadeInDown">
                        <i class="fas fa-check-circle fs-4 me-3 text-success"></i> 
                        <span class="fw-medium">@TempData["Success"]</span>
                    </div>
                }

                <div class="glass-card">
                    
                    <!-- Header -->
                    <div class="form-header">
                        <div class="d-flex align-items-center gap-4">
                            <div class="header-icon-box">
                                <i class="fas fa-calendar-plus fa-2x text-white"></i>
                            </div>
                            <div>
                                <h2 class="fw-bold mb-1">Nouveau Rendez-vous</h2>
                                <p class="mb-0 opacity-90 font-monospace small">Planification d'une consultation</p>
                            </div>
                        </div>
                    </div>

                    <div class="p-5">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                            <div class="row g-4">
                                
                                <!-- Doctor Selection -->
                                <div class="col-md-6">
                                    <label asp-for="DoctorId" class="form-label-modern">
                                        <i class="fas fa-user-md me-2 text-primary"></i>Médecin
                                    </label>
                                    <select asp-for="DoctorId" asp-items="ViewBag.DoctorId" class="form-select form-select-modern">
                                        <option value="">-- Choisir un médecin --</option>
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <!-- Patient Selection -->
                                <div class="col-md-6">
                                    <label asp-for="PatientId" class="form-label-modern">
                                        <i class="fas fa-user-injured me-2 text-primary"></i>Patient
                                    </label>
                                    <select asp-for="PatientId" asp-items="ViewBag.PatientId" class="form-select form-select-modern">
                                        <option value="">-- Choisir un patient --</option>
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <!-- Date & Time -->
                                <div class="col-12">
                                    <label asp-for="DateHeure" class="form-label-modern">
                                        <i class="far fa-clock me-2 text-primary"></i>Date et Heure
                                    </label>
                                    <input asp-for="DateHeure" class="form-control form-control-modern" type="datetime-local" />
                                    <span asp-validation-for="DateHeure" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <!-- Reason -->
                                <div class="col-12">
                                    <label asp-for="Motif" class="form-label-modern">
                                        <i class="fas fa-comment-medical me-2 text-primary"></i>Motif (Facultatif)
                                    </label>
                                    <textarea asp-for="Motif" class="form-control form-control-modern" rows="4" placeholder="Ex: Consultation de routine, urgence..."></textarea>
                                    <span asp-validation-for="Motif" class="text-danger small mt-1 d-block"></span>
                                </div>

                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-between align-items-center pt-4 mt-4 border-top">
                                <a asp-action="Index" asp-controller="Agenda" class="btn-cancel">
                                    <i class="fas fa-arrow-left me-2"></i>Annuler
                                </a>
                                <button type="submit" class="btn-save">
                                    <i class="fas fa-check-circle me-2"></i>Créer le RDV
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}