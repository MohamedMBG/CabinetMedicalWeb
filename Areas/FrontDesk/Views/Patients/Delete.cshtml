@model CabinetMedicalWeb.Models.Patient

@{
    ViewData["Title"] = "Supprimer le Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Theme Colors
    var colorBg = "#E9EFF7";
    var colorDanger = "#EF4444";
    var colorDangerDark = "#DC2626";
}

<style>
    /* Scoped styles for Delete View */
    body { background-color: @colorBg; font-family: 'Inter', system-ui, -apple-system, sans-serif; }

    .delete-container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.08);
        border: 1px solid rgba(255,255,255,0.6);
        overflow: hidden;
    }

    .delete-header {
        background: linear-gradient(135deg, #FCA5A5 0%, @colorDanger 100%);
        padding: 3rem;
        color: white;
        position: relative;
    }
    
    .header-icon-box {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.25);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        backdrop-filter: blur(4px);
        border: 2px solid rgba(255,255,255,0.3);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .warning-box {
        background-color: #FEF2F2;
        border: 1px solid #FEE2E2;
        border-left: 5px solid @colorDanger;
        color: #991B1B;
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: #6B7280;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-size: 1.1rem;
        color: #1F2937;
        font-weight: 600;
    }

    .info-row {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px dashed #E5E7EB;
    }
    .info-row:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .btn-delete {
        background-color: @colorDanger;
        color: white;
        border-radius: 12px;
        padding: 1rem 2rem;
        font-weight: 700;
        border: none;
        transition: all 0.2s;
        box-shadow: 0 4px 6px rgba(239, 68, 68, 0.3);
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(239, 68, 68, 0.4);
        background-color: @colorDangerDark;
        color: white;
    }

    .btn-cancel {
        color: #4B5563;
        font-weight: 600;
        text-decoration: none;
        padding: 1rem 2rem;
        border-radius: 12px;
        border: 1px solid #E5E7EB;
        background: white;
        display: inline-block;
        text-align: center;
        width: 100%;
        transition: all 0.2s;
    }
    
    .btn-cancel:hover {
        background-color: #F3F4F6;
        color: #111827;
        border-color: #D1D5DB;
    }
</style>

<div class="delete-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="glass-card">
                    <!-- Header -->
                    <div class="delete-header">
                        <div class="d-flex align-items-center gap-4">
                            <div class="header-icon-box">
                                <i class="fas fa-trash-alt text-white"></i>
                            </div>
                            <div>
                                <h2 class="fw-bold mb-1">Supprimer le Patient</h2>
                                <p class="mb-0 opacity-90 font-monospace small">Action irréversible</p>
                            </div>
                        </div>
                    </div>

                    <div class="p-5">
                        <!-- Warning Alert -->
                        <div class="warning-box">
                            <i class="fas fa-exclamation-triangle fa-lg mt-1"></i>
                            <div>
                                <h5 class="fw-bold mb-1">Êtes-vous sûr ?</h5>
                                <p class="mb-0 text-sm opacity-90">
                                    Vous êtes sur le point de supprimer définitivement ce patient. 
                                    Cette action supprimera également <strong>l'historique médical, les rendez-vous et les documents associés</strong>.
                                </p>
                            </div>
                        </div>

                        <!-- Patient Details Summary -->
                        <div class="bg-light p-4 rounded-4 mb-5 border">
                            <div class="info-row">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="info-label">Nom</div>
                                        <div class="info-value">@Model.Nom</div>
                                    </div>
                                    <div class="col-6">
                                        <div class="info-label">Prénom</div>
                                        <div class="info-value">@Model.Prenom</div>
                                    </div>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Email</div>
                                <div class="info-value">
                                    @if(!string.IsNullOrEmpty(Model.Email)) { <span>@Model.Email</span> } else { <span class="text-muted fst-italic">Non renseigné</span> }
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">Téléphone</div>
                                <div class="info-value">@Model.Telephone</div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="row g-3">
                                <div class="col-6">
                                    <a asp-action="Index" class="btn-cancel">
                                        Annuler
                                    </a>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn-delete">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}