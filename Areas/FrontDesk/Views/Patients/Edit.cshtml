@model CabinetMedicalWeb.Models.Patient

@{
    ViewData["Title"] = "Modifier le Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var colorPrimary = "#7AA3D1";
    var colorBg = "#E9EFF7";
    var textDark = "#1F2937";
    var textMuted = "#6B7280";
    var borderColor = "#D4DEEC";
}

<style>
    :root{
        --primary:@colorPrimary;
        --bg:@colorBg;
        --dark:@textDark;
        --muted:@textMuted;
        --border:@borderColor;
        --surface:#ffffff;
    }

    html { scroll-behavior: smooth; }

    body{
        background:
            radial-gradient(circle at 12% 12%, rgba(122,163,209,.18), transparent 35%),
            radial-gradient(circle at 90% 0%, rgba(145,179,217,.16), transparent 35%),
            var(--bg);
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    /* -------- PERF: smooth without "blocking" --------
       Avoid heavy blur on large containers + avoid animating box-shadow.
       Animate only transform/opacity. Keep everything visible by default.
    */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(14px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    .edit-shell{
        max-width: 1100px;
        margin: 1.25rem auto 3rem;
        padding: 0 1rem;
        opacity: 1; /* important: never hide the whole page */
        animation: fadeInUp .55s cubic-bezier(.16,1,.3,1) both;

        /* Large pages scroll smoother */
        content-visibility: auto;
        contain-intrinsic-size: 1px 900px;
    }

    @@media (prefers-reduced-motion: reduce){
        html { scroll-behavior: auto; }
        .edit-shell{ animation: none !important; }
        *{ transition:none !important; }
    }

    .glass-card{
        background: rgba(255,255,255,0.92);
        border-radius: 24px;
        border: 1px solid rgba(212,222,236,.9);
        box-shadow: 0 18px 42px rgba(31,41,55,.06);
        overflow: hidden;
    }

    /* Header (keep blur tiny, only on small element) */
    .form-header{
        background: linear-gradient(135deg, var(--primary) 0%, #91B3D9 100%);
        padding: 2.25rem;
        color: #fff;
        position: relative;
        overflow: hidden;
    }
    .form-header::after{
        content:"";
        position:absolute;
        right:-120px; top:-140px;
        width: 320px; height: 320px;
        background: radial-gradient(circle, rgba(255,255,255,.20), transparent 60%);
        border-radius: 50%;
        pointer-events:none;
    }

    .header-row{
        position: relative;
        z-index: 1;
        display:flex;
        align-items:center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .header-icon{
        width: 64px;
        height: 64px;
        border-radius: 18px;
        display:grid;
        place-items:center;
        background: rgba(255,255,255,.18);
        border: 1px solid rgba(255,255,255,.25);
        box-shadow: 0 12px 24px rgba(0,0,0,.10);
        /* small blur only here */
        backdrop-filter: blur(6px);
    }

    .header-title{
        margin: 0;
        font-weight: 900;
        letter-spacing: -0.02em;
    }

    .header-sub{
        margin: .35rem 0 0 0;
        opacity: .92;
        color: rgba(255,255,255,.92);
        font-size: .95rem;
    }

    /* Body */
    .card-body{
        padding: 2rem;
    }

    @@media (min-width: 992px){
        .card-body{ padding: 2.5rem; }
    }

    .form-section-title{
        font-size: .75rem;
        text-transform: uppercase;
        letter-spacing: .12em;
        font-weight: 800;
        color: var(--muted);
        margin: 0 0 1.1rem 0;
        padding-bottom: .6rem;
        border-bottom: 2px solid rgba(229,231,235,.9);
        display:flex;
        align-items:center;
        gap:.55rem;
    }

    /* Inputs: lighter background + no expensive effects */
    .form-floating > .form-control,
    .form-floating > .form-select{
        border-radius: 14px;
        border: 1px solid rgba(229,231,235,.95);
        background: rgba(249,250,251,.92);
        transition: border-color .18s ease, box-shadow .18s ease, background .18s ease;
    }

    .form-floating > .form-control:focus,
    .form-floating > .form-select:focus{
        border-color: var(--primary);
        background: #fff;
        box-shadow: 0 0 0 4px rgba(122,163,209,.18);
        outline: none;
    }

    .form-floating > label{ color: var(--muted); }

    /* Sticky action bar (feels smoother, less scrolling back) */
    .actions-bar{
        position: sticky;
        bottom: 0;
        background: rgba(255,255,255,.88);
        backdrop-filter: blur(8px);
        border-top: 1px solid rgba(212,222,236,.9);
        padding: 1rem 1.25rem;
        display:flex;
        justify-content: space-between;
        align-items:center;
        gap: 1rem;
    }

    /* Buttons: animate transform only */
    .btn-save{
        background: linear-gradient(135deg, var(--primary) 0%, #6C8CFF 100%);
        color: #fff;
        border-radius: 14px;
        padding: .85rem 1.35rem;
        font-weight: 800;
        border: none;
        box-shadow: 0 12px 22px rgba(122,163,209,.26);
        transition: transform .18s ease, filter .18s ease, box-shadow .18s ease;
        display:inline-flex;
        align-items:center;
        gap:.55rem;
        white-space: nowrap;
    }
    .btn-save:hover{
        transform: translateY(-2px);
        filter: brightness(1.02);
        box-shadow: 0 16px 28px rgba(122,163,209,.30);
        color:#fff;
    }

    .btn-cancel{
        color: #374151;
        font-weight: 800;
        text-decoration:none;
        padding: .85rem 1.1rem;
        border-radius: 14px;
        border: 1px solid rgba(212,222,236,.9);
        background: rgba(243,244,246,.65);
        transition: transform .18s ease, background .18s ease, border-color .18s ease;
        display:inline-flex;
        align-items:center;
        gap:.55rem;
        white-space: nowrap;
    }
    .btn-cancel:hover{
        background: #fff;
        border-color: rgba(122,163,209,.55);
        transform: translateY(-1px);
        color: #111827;
    }

    /* Small helper "chips" */
    .hint-chip{
        display:inline-flex;
        align-items:center;
        gap:.45rem;
        padding: .35rem .7rem;
        border-radius: 999px;
        background: rgba(238,244,251,.9);
        border: 1px solid rgba(212,222,236,.9);
        color: rgba(31,41,55,.78);
        font-size: .85rem;
        font-weight: 700;
        margin-top: .35rem;
    }

    /* Micro-stagger on sections for smooth feel */
    .section-anim{ opacity: 1; transform: none; }
    @@media (prefers-reduced-motion: no-preference){
        .section-anim{
            opacity: 0;
            transform: translateY(10px);
            animation: fadeInUp .5s cubic-bezier(.16,1,.3,1) both;
        }
        .d1{ animation-delay: .05s; }
        .d2{ animation-delay: .12s; }
        .d3{ animation-delay: .18s; }
    }
</style>

<div class="edit-shell">
    <form asp-action="Edit" asp-route-id="@Model.Id" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="glass-card">

            <!-- Header -->
            <div class="form-header">
                <div class="header-row">
                    <div class="header-icon">
                        <i class="fas fa-user-edit fa-2x text-white"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h2 class="header-title">Modifier le patient</h2>
                        <p class="header-sub">
                            Dossier de <strong>@Model.Nom @Model.Prenom</strong>
                        </p>
                    </div>

                    <div class="d-flex flex-wrap gap-2">
                        <span class="hint-chip"><i class="fas fa-shield-alt"></i> Données sécurisées</span>
                        <span class="hint-chip"><i class="fas fa-bolt"></i> Sauvegarde rapide</span>
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                <!-- Section 1: Identité -->
                <div class="mb-5 section-anim d1">
                    <h6 class="form-section-title"><i class="fas fa-id-card text-primary"></i> État Civil</h6>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Nom" class="form-control" placeholder="Nom" />
                                <label asp-for="Nom">Nom</label>
                            </div>
                            <span asp-validation-for="Nom" class="text-danger small ms-1"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Prenom" class="form-control" placeholder="Prénom" />
                                <label asp-for="Prenom">Prénom</label>
                            </div>
                            <span asp-validation-for="Prenom" class="text-danger small ms-1"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="DateNaissance" type="date" class="form-control" placeholder="Date de naissance" />
                                <label asp-for="DateNaissance">Date de naissance</label>
                            </div>
                            <span asp-validation-for="DateNaissance" class="text-danger small ms-1"></span>
                        </div>
                    </div>
                </div>

                <!-- Section 2: Contact -->
                <div class="mb-5 section-anim d2">
                    <h6 class="form-section-title"><i class="fas fa-address-book text-primary"></i> Coordonnées</h6>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Telephone" class="form-control" placeholder="Téléphone" />
                                <label asp-for="Telephone">Téléphone</label>
                            </div>
                            <span asp-validation-for="Telephone" class="text-danger small ms-1"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <label asp-for="Email">Email</label>
                            </div>
                            <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Adresse" class="form-control" placeholder="Adresse complète" />
                                <label asp-for="Adresse">Adresse complète</label>
                            </div>
                            <span asp-validation-for="Adresse" class="text-danger small ms-1"></span>
                        </div>
                    </div>
                </div>

                <!-- Section 3: Médical -->
                <div class="mb-4 section-anim d3">
                    <h6 class="form-section-title"><i class="fas fa-file-medical text-primary"></i> Informations Médicales</h6>
                    <div class="form-floating">
                        <textarea asp-for="AntecedentsMedicaux" class="form-control" style="height: 140px" placeholder="Antécédents"></textarea>
                        <label asp-for="AntecedentsMedicaux">Antécédents, allergies & notes importantes</label>
                    </div>
                    <span asp-validation-for="AntecedentsMedicaux" class="text-danger small ms-1"></span>
                </div>
            </div>

            <!-- Actions (sticky) -->
            <div class="actions-bar">
                <a asp-action="Index" class="btn-cancel">
                    <i class="fas fa-arrow-left"></i> Annuler
                </a>

                <button type="submit" class="btn-save">
                    <i class="fas fa-check-circle"></i> Enregistrer
                </button>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Micro-optimizations for perceived smoothness
        document.addEventListener("DOMContentLoaded", () => {
            // Disable "scroll-jank" from focus jumps on mobile by keeping focus behavior smooth
            const inputs = document.querySelectorAll(".form-control, textarea");
            inputs.forEach(i => {
                i.addEventListener("focus", () => i.scrollIntoView({ behavior: "smooth", block: "center" }));
            });
        });
    </script>
}
