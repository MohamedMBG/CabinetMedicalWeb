@model CabinetMedicalWeb.Models.Patient

@{
    ViewData["Title"] = "Modifier le Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Modern Theme Colors (Indigo/Slate)
    var colorPrimary = "#7AA3D1";
    var colorBg = "#E9EFF7";
    var textDark = "#1F2937";
}

<style>
    /* Scoped styles for Edit View */
    body { background-color: @colorBg; font-family: 'Inter', system-ui, -apple-system, sans-serif; }

    .edit-container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.08);
        border: 1px solid rgba(255,255,255,0.6);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, @colorPrimary 0%, #91B3D9 100%);
        padding: 3rem;
        color: white;
        position: relative;
    }
    
    .form-section-title {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: #6B7280;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #E5E7EB;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-floating > .form-control, .form-floating > .form-select {
        border-radius: 12px;
        border: 1px solid #E5E7EB;
        background-color: #F9FAFB;
    }

    .form-floating > .form-control:focus, .form-floating > .form-select:focus {
        border-color: @colorPrimary;
        background-color: #fff;
        box-shadow: 0 0 0 4px rgba(122, 163, 209, 0.2);
        outline: none;
    }
    
    .form-floating > label {
        color: #6B7280;
    }
    
    .btn-save {
        background: linear-gradient(135deg, @colorPrimary 0%, #6C8CFF 100%);
        color: white;
        border-radius: 12px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        border: none;
        transition: all 0.2s;
        box-shadow: 0 4px 6px rgba(122, 163, 209, 0.3);
    }
    
    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(122, 163, 209, 0.4);
        color: white;
    }

    .btn-cancel {
        color: #4B5563;
        font-weight: 600;
        text-decoration: none;
        padding: 0.8rem 2rem;
        border-radius: 12px;
        border: 1px solid transparent;
        transition: all 0.2s;
    }
    
    .btn-cancel:hover {
        background-color: #F3F4F6;
        color: #111827;
    }
</style>

<div class="edit-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form asp-action="Edit" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="glass-card">
                        <!-- Header -->
                        <div class="form-header">
                            <div class="d-flex align-items-center gap-4">
                                <div class="bg-white bg-opacity-20 p-3 rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 64px; height: 64px; backdrop-filter: blur(5px);">
                                    <i class="fas fa-user-edit fa-2x text-white"></i>
                                </div>
                                <div>
                                    <h2 class="fw-bold mb-1">Mise à jour Patient</h2>
                                    <p class="mb-0 opacity-90 font-monospace small">Modification du dossier de @Model.Nom @Model.Prenom</p>
                                </div>
                            </div>
                        </div>

                        <div class="p-5">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                            <!-- Section 1: Identité -->
                            <div class="mb-5">
                                <h6 class="form-section-title"><i class="fas fa-id-card text-primary"></i> État Civil</h6>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Nom" class="form-control" placeholder="Nom" />
                                            <label asp-for="Nom">Nom</label>
                                        </div>
                                        <span asp-validation-for="Nom" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Prenom" class="form-control" placeholder="Prénom" />
                                            <label asp-for="Prenom">Prénom</label>
                                        </div>
                                        <span asp-validation-for="Prenom" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="DateNaissance" type="date" class="form-control" placeholder="Date de naissance" />
                                            <label asp-for="DateNaissance">Date de naissance</label>
                                        </div>
                                        <span asp-validation-for="DateNaissance" class="text-danger small ms-1"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Section 2: Contact -->
                            <div class="mb-5">
                                <h6 class="form-section-title"><i class="fas fa-address-book text-primary"></i> Coordonnées</h6>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Telephone" class="form-control" placeholder="Téléphone" />
                                            <label asp-for="Telephone">Téléphone</label>
                                        </div>
                                        <span asp-validation-for="Telephone" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Email" class="form-control" placeholder="Email" />
                                            <label asp-for="Email">Email</label>
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <input asp-for="Adresse" class="form-control" placeholder="Adresse complète" />
                                            <label asp-for="Adresse">Adresse complète</label>
                                        </div>
                                        <span asp-validation-for="Adresse" class="text-danger small ms-1"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Section 3: Médical -->
                            <div class="mb-4">
                                <h6 class="form-section-title"><i class="fas fa-file-medical text-primary"></i> Informations Médicales</h6>
                                <div class="form-floating">
                                    <textarea asp-for="AntecedentsMedicaux" class="form-control" style="height: 120px" placeholder="Antécédents"></textarea>
                                    <label asp-for="AntecedentsMedicaux">Antécédents, Allergies & Notes importantes</label>
                                </div>
                                <span asp-validation-for="AntecedentsMedicaux" class="text-danger small ms-1"></span>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-between align-items-center pt-4 mt-4 border-top">
                                <a asp-action="Index" class="btn-cancel">
                                    <i class="fas fa-arrow-left me-2"></i>Annuler
                                </a>
                                <button type="submit" class="btn-save">
                                    <i class="fas fa-check-circle me-2"></i>Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}