@model CabinetMedicalWeb.Areas.FrontDesk.Models.ReservationApprovalViewModel
@{
    ViewData["Title"] = "Valider une demande";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Informations patient</h5>
                    <p class="mb-1 fw-semibold">@Model.NomComplet</p>
                    <p class="text-muted mb-3">Né(e) le @Model.DateNaissance.ToString("dd/MM/yyyy")</p>

                    <ul class="list-unstyled small text-muted mb-0">
                        <li><i class="fas fa-phone me-2"></i>@Model.Telephone</li>
                        <li><i class="fas fa-envelope me-2"></i>@Model.Email</li>
                        @if (!string.IsNullOrEmpty(Model.Adresse))
                        {
                            <li><i class="fas fa-map-marker-alt me-2"></i>@Model.Adresse</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Validation de la demande</h5>
                    <p class="text-muted">Date souhaitée : <strong>@Model.DateSouhaitee.ToString("dd/MM/yyyy HH:mm")</strong></p>
                    <div class="alert alert-info">Motif : @Model.Motif</div>

                    <form asp-action="Approve" method="post">
                        <input type="hidden" asp-for="ReservationId" />
                        <div class="mb-3">
                            <label asp-for="DoctorId" class="form-label"></label>
                            <select asp-for="DoctorId" class="form-select" asp-items="Model.Doctors">
                                <option value="">-- Choisir un médecin --</option>
                            </select>
                            <span class="text-danger" asp-validation-for="DoctorId"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DateHeure" class="form-label"></label>
                            <input asp-for="DateHeure" class="form-control" />
                            <span class="text-danger" asp-validation-for="DateHeure"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="Index">Retour</a>
                            <button type="submit" class="btn btn-primary">Valider et créer le rendez-vous</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
