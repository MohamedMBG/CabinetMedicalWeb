@model CabinetMedicalWeb.Areas.FrontDesk.Models.ReservationApprovalViewModel
@{
    ViewData["Title"] = "Valider une demande";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
            <p class="text-muted mb-1">Validation manuelle</p>
            <h1 class="h4 mb-0">Confirmer la demande et assigner un médecin</h1>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Retour aux demandes</a>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Informations patient</h5>
                    <p class="mb-1 fw-semibold">@Model.NomComplet</p>
                    <p class="text-muted mb-3">Né(e) le @Model.DateNaissance.ToString("dd/MM/yyyy")</p>

                    <ul class="list-unstyled small text-muted mb-0">
                        <li><i class="fas fa-phone me-2"></i>@Model.Telephone</li>
                        <li><i class="fas fa-envelope me-2"></i>@Model.Email</li>
                        @if (!string.IsNullOrEmpty(Model.Adresse))
                        {
                            <li><i class="fas fa-map-marker-alt me-2"></i>@Model.Adresse</li>
                        }
                    </ul>

                    <hr />
                    <h6 class="text-muted">Rappel de la demande</h6>
                    <p class="mb-1">Souhaite : <strong>@Model.DateSouhaitee.ToString("dd/MM/yyyy HH:mm")</strong></p>
                    <div class="alert alert-light border">Motif : @Model.Motif</div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="card-title mb-0">Validation de la demande</h5>
                        <span class="badge bg-warning text-dark">En attente d'assignation</span>
                    </div>
                    <p class="text-muted">La validation crée automatiquement le patient (s'il n'existe pas) et le rendez-vous confirmé.</p>

                    <form asp-action="Approve" method="post">
                        <input type="hidden" asp-for="ReservationId" />
                        <div class="mb-3">
                            <label asp-for="DoctorId" class="form-label"></label>
                            <select asp-for="DoctorId" class="form-select" asp-items="Model.Doctors">
                                <option value="">-- Choisir un médecin --</option>
                            </select>
                            <span class="text-danger" asp-validation-for="DoctorId"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DateHeure" class="form-label"></label>
                            <input asp-for="DateHeure" class="form-control" />
                            <span class="text-danger" asp-validation-for="DateHeure"></span>
                        </div>

                        <div class="alert alert-secondary small">
                            <i class="fas fa-info-circle me-2"></i>Le patient sera enregistré et un rendez-vous confirmé sera créé avec le
                            médecin sélectionné.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="Index">Retour</a>
                            <button type="submit" class="btn btn-primary">Valider et créer le rendez-vous</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
