    ViewData["Title"] = "Aurora Dental Clinic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --gradient-start: #dcefff;
        --gradient-mid: #c5d9ff;
        --gradient-end: #b3c7ff;
        --primary: #7aa5ff;
        --primary-strong: #6c8cff;
        --soft-purple: #c7d3ff;
        --text-dark: #1f2a44;
        --text-muted: #65748a;
        --card-bg: rgba(255, 255, 255, 0.9);
        --glass: rgba(255, 255, 255, 0.75);
        --shadow: 0 20px 50px rgba(52, 94, 161, 0.15);
        --radius-lg: 28px;
        --radius-md: 18px;
    }

    body {
        background: radial-gradient(circle at 20% 20%, rgba(122, 165, 255, 0.15), transparent 30%),
            radial-gradient(circle at 80% 10%, rgba(155, 171, 255, 0.22), transparent 30%),
            linear-gradient(135deg, var(--gradient-start), var(--gradient-mid), var(--gradient-end));
        background-size: 140% 140%;
        animation: driftBackground 16s ease-in-out infinite alternate;
    }

    @keyframes driftBackground {
        from { background-position: 0% 50%, 80% 30%, 0% 0%; }
        to { background-position: 30% 40%, 60% 10%, 100% 100%; }
    }

    .hero-wrapper {
        position: relative;
        overflow: hidden;
        min-height: 90vh;
        display: flex;
        align-items: center;
        padding: 4rem 0 2rem;
    }

    .hero-blob {
        position: absolute;
        width: 520px;
        height: 520px;
        background: radial-gradient(circle at 30% 30%, #f9fbff 0%, rgba(255, 255, 255, 0) 70%);
        filter: blur(16px);
        opacity: 0.7;
        right: -80px;
        top: -40px;
        z-index: 1;
    }

    .sparkle { position: absolute; width: 14px; height: 14px; border-radius: 50%; background: rgba(255,255,255,0.8); filter: blur(1px); animation: float 10s ease-in-out infinite; }
    .sparkle:nth-child(2) { width: 10px; height: 10px; left: 8%; top: 20%; animation-duration: 12s; animation-delay: 1.5s; }
    .sparkle:nth-child(3) { width: 16px; height: 16px; right: 15%; top: 65%; animation-duration: 9s; animation-delay: 0.8s; }
    .sparkle:nth-child(4) { width: 12px; height: 12px; left: 20%; top: 70%; animation-duration: 11s; animation-delay: 2.2s; }

    @keyframes float {
        0% { transform: translateY(0px); opacity: 0.8; }
        50% { transform: translateY(-14px); opacity: 1; }
        100% { transform: translateY(0px); opacity: 0.8; }
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .badge-new {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.45);
        padding: 0.55rem 1rem;
        border-radius: 999px;
        color: var(--text-dark);
        backdrop-filter: blur(10px);
        font-weight: 600;
        margin-bottom: 1.5rem;
        box-shadow: var(--shadow);
    }

    .hero-title {
        font-size: clamp(2.4rem, 4vw, 3.6rem);
        font-weight: 800;
        color: var(--text-dark);
        line-height: 1.1;
        margin-bottom: 1.25rem;
        letter-spacing: -0.04em;
    }

    .hero-subtitle {
        font-size: 1.1rem;
        color: var(--text-muted);
        max-width: 560px;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .hero-buttons .btn {
        padding: 0.95rem 1.6rem;
        border-radius: var(--radius-md);
        font-weight: 700;
        box-shadow: var(--shadow);
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease, filter 0.2s ease;
    }

    .btn-primary-gradient {
        background: linear-gradient(120deg, #8eb9ff, #7aa5ff);
        color: white;
    }

    .btn-secondary-light {
        background: rgba(255, 255, 255, 0.8);
        color: var(--text-dark);
        border: 1px solid rgba(122, 165, 255, 0.25);
    }

    .hero-buttons .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 18px 40px rgba(43, 82, 143, 0.16);
        filter: saturate(1.05);
    }

    .hero-cards {
        position: relative;
    }

    .floating-card {
        position: absolute;
        background: var(--card-bg);
        box-shadow: var(--shadow);
        border-radius: var(--radius-lg);
        padding: 1.6rem;
        min-width: 240px;
        border: 1px solid rgba(122, 165, 255, 0.18);
        backdrop-filter: blur(8px);
        animation: rise 8s ease-in-out infinite;
    }

    .card-appointment {
        top: 0;
        right: -10px;
    }

    .card-progress {
        top: 190px;
        right: 120px;
        animation-delay: 1s;
    }

    .card-icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        color: white;
        font-size: 1.2rem;
        box-shadow: 0 10px 25px rgba(122, 165, 255, 0.25);
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.65rem 1rem;
        border-radius: 999px;
        background: rgba(122, 165, 255, 0.15);
        color: var(--text-dark);
        font-weight: 600;
        margin-top: 1rem;
    }

    .progress-ring {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: conic-gradient(#7aa5ff 0% 78%, #dbe6ff 78% 100%);
        display: grid;
        place-items: center;
    }

    .progress-ring span {
        background: white;
        width: 82px;
        height: 82px;
        border-radius: 50%;
        display: grid;
        place-items: center;
        font-weight: 800;
        color: var(--text-dark);
        box-shadow: inset 0 0 0 1px rgba(122, 165, 255, 0.1);
    }

    @keyframes rise {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    /* Services */
    .section-intro {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .section-intro h2 {
        font-weight: 800;
        color: var(--text-dark);
        letter-spacing: -0.03em;
        margin-bottom: 0.75rem;
    }

    .section-intro p {
        color: var(--text-muted);
        max-width: 620px;
        margin: 0 auto;
    }

    .service-card {
        background: white;
        border-radius: var(--radius-lg);
        padding: 1.75rem;
        text-align: center;
        border: 1px solid rgba(122, 165, 255, 0.12);
        box-shadow: 0 18px 40px rgba(43, 82, 143, 0.08);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        height: 100%;
    }

    .service-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 50px rgba(43, 82, 143, 0.12);
    }

    .service-icon {
        width: 78px;
        height: 78px;
        border-radius: 24px;
        background: radial-gradient(circle at 30% 30%, #cfe0ff, #9ab6ff);
        display: grid;
        place-items: center;
        color: white;
        font-size: 2rem;
        margin: 0 auto 1rem;
        box-shadow: 0 12px 30px rgba(122, 165, 255, 0.25);
    }

    .service-title {
        font-weight: 700;
        margin-bottom: 0.6rem;
        color: var(--text-dark);
        font-size: 1.1rem;
    }

    .service-desc {
        color: var(--text-muted);
        font-size: 0.98rem;
        line-height: 1.6;
    }

    .timeline-card {
        background: rgba(255, 255, 255, 0.85);
        border: 1px solid rgba(122, 165, 255, 0.18);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        box-shadow: 0 16px 40px rgba(43, 82, 143, 0.12);
        height: 100%;
    }

    .timeline-step { display: flex; align-items: flex-start; gap: 1rem; margin-bottom: 1.2rem; }
    .timeline-step:last-child { margin-bottom: 0; }
    .step-dot { width: 44px; height: 44px; border-radius: 14px; background: linear-gradient(140deg, #8fbaff, #6c8cff); color: white; display: grid; place-items: center; font-weight: 800; box-shadow: 0 10px 28px rgba(122, 165, 255, 0.25); }
    .step-body h5 { margin-bottom: 0.25rem; color: var(--text-dark); }
    .step-body p { margin-bottom: 0; color: var(--text-muted); }

    /* CTA ribbon */
    .cta-card {
        background: linear-gradient(120deg, rgba(122, 165, 255, 0.2), rgba(255, 255, 255, 0.75));
        border-radius: var(--radius-lg);
        padding: 1.75rem;
        border: 1px solid rgba(122, 165, 255, 0.2);
        box-shadow: 0 16px 40px rgba(52, 94, 161, 0.12);
        backdrop-filter: blur(8px);
    }

    .cta-card h3 {
        color: var(--text-dark);
        font-weight: 800;
        margin-bottom: 0.35rem;
    }

    .cta-card p { color: var(--text-muted); margin-bottom: 0; }

    /* Appointment */
    .appointment-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        align-items: stretch;
    }

    .booking-card { background: white; border-radius: var(--radius-lg); padding: 1.75rem; border: 1px solid rgba(122,165,255,0.16); box-shadow: 0 16px 40px rgba(43,82,143,0.1); }
    .booking-card h4 { font-weight: 800; color: var(--text-dark); margin-bottom: 0.6rem; }
    .booking-card p { color: var(--text-muted); }
    .booking-card form .form-control { border-radius: 14px; border: 1px solid rgba(122,165,255,0.25); padding: 0.85rem 1rem; }
    .booking-card label { font-weight: 700; color: var(--text-dark); margin-bottom: 0.35rem; }
    .booking-card .btn { width: 100%; }

    .availability-card { background: linear-gradient(145deg, rgba(122,165,255,0.15), rgba(255,255,255,0.8)); border-radius: var(--radius-lg); padding: 1.75rem; border: 1px solid rgba(122,165,255,0.24); box-shadow: 0 16px 40px rgba(43,82,143,0.14); }
    .availability-card h5 { font-weight: 800; color: var(--text-dark); margin-bottom: 1rem; }
    .slot { display: flex; align-items: center; justify-content: space-between; padding: 0.85rem 1rem; border-radius: 14px; background: rgba(255,255,255,0.9); border: 1px solid rgba(122,165,255,0.18); box-shadow: 0 12px 30px rgba(43,82,143,0.08); margin-bottom: 0.75rem; }
    .slot:last-child { margin-bottom: 0; }
    .slot strong { color: var(--text-dark); }
    .slot span { color: var(--text-muted); font-weight: 600; }
    .slot .btn { width: auto; padding: 0.55rem 1rem; box-shadow: none; }

    .floating-badge { display: inline-flex; align-items: center; gap: 0.6rem; background: rgba(255,255,255,0.75); border: 1px solid rgba(122,165,255,0.2); padding: 0.65rem 1rem; border-radius: 999px; color: var(--text-dark); box-shadow: var(--shadow); animation: pulse 3s ease-in-out infinite; }

    @keyframes pulse {
        0%, 100% { box-shadow: 0 20px 45px rgba(122,165,255,0.14); transform: translateY(0); }
        50% { box-shadow: 0 24px 52px rgba(122,165,255,0.22); transform: translateY(-2px); }
    }

    @media (max-width: 992px) {
        .hero-wrapper { padding-top: 2rem; }
        .hero-cards { margin-top: 2rem; }
        .floating-card { position: relative; right: auto; top: auto; margin-bottom: 1rem; }
    }
</style>

