@{
    ViewData["Title"] = "Aurora Dental Clinic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --gradient-start: #dcefff;
        --gradient-mid: #c5d9ff;
        --gradient-end: #b3c7ff;
        --primary: #7aa5ff;
        --primary-strong: #6c8cff;
        --soft-purple: #c7d3ff;
        --text-dark: #1f2a44;
        --text-muted: #65748a;
        --card-bg: rgba(255, 255, 255, 0.9);
        --glass: rgba(255, 255, 255, 0.75);
        --shadow: 0 20px 50px rgba(52, 94, 161, 0.15);
        --radius-lg: 28px;
        --radius-md: 18px;
    }

    body {
        background: radial-gradient(circle at 20% 20%, rgba(122, 165, 255, 0.15), transparent 30%),
            radial-gradient(circle at 80% 10%, rgba(155, 171, 255, 0.22), transparent 30%),
            linear-gradient(135deg, var(--gradient-start), var(--gradient-mid), var(--gradient-end));
    }

    .hero-wrapper {
        position: relative;
        overflow: hidden;
        min-height: 90vh;
        display: flex;
        align-items: center;
        padding: 4rem 0 2rem;
    }

    .hero-blob {
        position: absolute;
        width: 520px;
        height: 520px;
        background: radial-gradient(circle at 30% 30%, #f9fbff 0%, rgba(255, 255, 255, 0) 70%);
        filter: blur(16px);
        opacity: 0.7;
        right: -80px;
        top: -40px;
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .badge-new {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.45);
        padding: 0.55rem 1rem;
        border-radius: 999px;
        color: var(--text-dark);
        backdrop-filter: blur(10px);
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .hero-title {
        font-size: clamp(2.4rem, 4vw, 3.6rem);
        font-weight: 800;
        color: var(--text-dark);
        line-height: 1.1;
        margin-bottom: 1.25rem;
        letter-spacing: -0.04em;
    }

    .hero-subtitle {
        font-size: 1.1rem;
        color: var(--text-muted);
        max-width: 560px;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .hero-buttons .btn {
        padding: 0.95rem 1.6rem;
        border-radius: var(--radius-md);
        font-weight: 700;
        box-shadow: var(--shadow);
        border: none;
    }

    .btn-primary-gradient {
        background: linear-gradient(120deg, #8eb9ff, #7aa5ff);
        color: white;
    }

    .btn-secondary-light {
        background: rgba(255, 255, 255, 0.8);
        color: var(--text-dark);
        border: 1px solid rgba(122, 165, 255, 0.25);
    }

    .hero-cards {
        position: relative;
    }

    .floating-card {
        position: absolute;
        background: var(--card-bg);
        box-shadow: var(--shadow);
        border-radius: var(--radius-lg);
        padding: 1.6rem;
        min-width: 240px;
        border: 1px solid rgba(122, 165, 255, 0.18);
        backdrop-filter: blur(8px);
    }

    .card-appointment {
        top: 0;
        right: -10px;
    }

    .card-progress {
        top: 190px;
        right: 120px;
    }

    .card-icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        color: white;
        font-size: 1.2rem;
        box-shadow: 0 10px 25px rgba(122, 165, 255, 0.25);
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.65rem 1rem;
        border-radius: 999px;
        background: rgba(122, 165, 255, 0.15);
        color: var(--text-dark);
        font-weight: 600;
        margin-top: 1rem;
    }

    .progress-ring {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: conic-gradient(#7aa5ff 0% 78%, #dbe6ff 78% 100%);
        display: grid;
        place-items: center;
    }

    .progress-ring span {
        background: white;
        width: 82px;
        height: 82px;
        border-radius: 50%;
        display: grid;
        place-items: center;
        font-weight: 800;
        color: var(--text-dark);
        box-shadow: inset 0 0 0 1px rgba(122, 165, 255, 0.1);
    }

    /* Services */
    .section-intro {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .section-intro h2 {
        font-weight: 800;
        color: var(--text-dark);
        letter-spacing: -0.03em;
        margin-bottom: 0.75rem;
    }

    .section-intro p {
        color: var(--text-muted);
        max-width: 620px;
        margin: 0 auto;
    }

    .service-card {
        background: white;
        border-radius: var(--radius-lg);
        padding: 1.75rem;
        text-align: center;
        border: 1px solid rgba(122, 165, 255, 0.12);
        box-shadow: 0 18px 40px rgba(43, 82, 143, 0.08);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        height: 100%;
    }

    .service-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 50px rgba(43, 82, 143, 0.12);
    }

    .service-icon {
        width: 78px;
        height: 78px;
        border-radius: 24px;
        background: radial-gradient(circle at 30% 30%, #cfe0ff, #9ab6ff);
        display: grid;
        place-items: center;
        color: white;
        font-size: 2rem;
        margin: 0 auto 1rem;
        box-shadow: 0 12px 30px rgba(122, 165, 255, 0.25);
    }

    .service-title {
        font-weight: 700;
        margin-bottom: 0.6rem;
        color: var(--text-dark);
        font-size: 1.1rem;
    }

    .service-desc {
        color: var(--text-muted);
        font-size: 0.98rem;
        line-height: 1.6;
    }

    /* CTA ribbon */
    .cta-card {
        background: linear-gradient(120deg, rgba(122, 165, 255, 0.2), rgba(255, 255, 255, 0.75));
        border-radius: var(--radius-lg);
        padding: 1.75rem;
        border: 1px solid rgba(122, 165, 255, 0.2);
        box-shadow: 0 16px 40px rgba(52, 94, 161, 0.12);
        backdrop-filter: blur(8px);
    }

    .cta-card h3 {
        color: var(--text-dark);
        font-weight: 800;
        margin-bottom: 0.35rem;
    }

    .cta-card p { color: var(--text-muted); margin-bottom: 0; }

    @media (max-width: 992px) {
        .hero-wrapper { padding-top: 2rem; }
        .hero-cards { margin-top: 2rem; }
        .floating-card { position: relative; right: auto; top: auto; margin-bottom: 1rem; }
    }
</style>

<section class="hero-wrapper" id="top">
    <div class="hero-blob"></div>
    <div class="container hero-content">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="badge-new"><i class="fas fa-sparkles"></i> Premium digital dental care</div>
                <h1 class="hero-title">Enhance your smile with Aurora Dental.</h1>
                <p class="hero-subtitle">
                    Gentle, tech-forward dentistry designed to keep you comfortable. From whitening to implants, our specialists craft confident smiles every day.
                </p>
                <div class="hero-buttons d-flex flex-wrap gap-3">
                    <a class="btn btn-primary-gradient" href="#appointment">Book now</a>
                    <a class="btn btn-secondary-light" href="#services">View treatments</a>
                </div>
            </div>
            <div class="col-lg-6 hero-cards d-none d-lg-block">
                <div class="floating-card card-appointment">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="card-icon" style="background: linear-gradient(135deg, #8fbaff, #6c8cff);">
                            <i class="fas fa-tooth"></i>
                        </div>
                        <span class="pill"><i class="fas fa-clock"></i> Same-day visits</span>
                    </div>
                    <h5 class="fw-bold mb-1">Whitening consultation</h5>
                    <p class="text-muted small mb-3">Thursday, 05 October â€¢ Dr. Olivia Hart</p>
                    <div class="d-flex align-items-center gap-3">
                        <img src="https://images.unsplash.com/photo-1528892952291-009c663ce843?auto=format&fit=crop&w=200&q=60" class="rounded-circle" width="52" height="52" alt="Dentist">
                        <div>
                            <strong>Jonathan Ross</strong>
                            <p class="text-muted mb-0 small">New patient onboarding</p>
                        </div>
                    </div>
                </div>

                <div class="floating-card card-progress">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <p class="text-muted small mb-1">Treatment progress</p>
                            <h5 class="fw-bold mb-0">Digital aligners</h5>
                        </div>
                        <div class="progress-ring"><span>78%</span></div>
                    </div>
                    <p class="text-muted small mb-3">Checkpoints completed this month.</p>
                    <div class="pill"><i class="fas fa-calendar-check"></i> Next scan in 3 days</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5" id="services">
    <div class="container py-4">
        <div class="section-intro">
            <span class="badge-new mb-3" style="background: rgba(255,255,255,0.9); border-color: rgba(122,165,255,0.25);">Wide range of care</span>
            <h2>Modern dentistry for every smile</h2>
            <p>Experience minimally invasive treatments with calming environments, advanced imaging, and caring professionals by your side.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="service-card">
                    <div class="service-icon"><i class="fas fa-tooth"></i></div>
                    <h3 class="service-title">Restorative Care</h3>
                    <p class="service-desc">Precision fillings and ceramic crowns that restore strength and keep your bite natural.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="service-card">
                    <div class="service-icon" style="background: radial-gradient(circle at 30% 30%, #cff5e4, #80e0b4); box-shadow: 0 12px 30px rgba(76, 201, 150, 0.25);">
                        <i class="fas fa-shield-virus"></i>
                    </div>
                    <h3 class="service-title">Preventive Dentistry</h3>
                    <p class="service-desc">Gentle cleanings, fluoride care, and screenings to keep you cavity-free all year.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="service-card">
                    <div class="service-icon" style="background: radial-gradient(circle at 30% 30%, #ffe9c7, #ffc074); box-shadow: 0 12px 30px rgba(255, 192, 116, 0.25);">
                        <i class="fas fa-gem"></i>
                    </div>
                    <h3 class="service-title">Cosmetic Upgrades</h3>
                    <p class="service-desc">Whitening, veneers, and smile design built to match your facial harmony.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="service-card">
                    <div class="service-icon" style="background: radial-gradient(circle at 30% 30%, #ffc9df, #ff8fbf); box-shadow: 0 12px 30px rgba(255, 143, 191, 0.22);">
                        <i class="fas fa-child"></i>
                    </div>
                    <h3 class="service-title">Kids & Teens</h3>
                    <p class="service-desc">A calm, playful atmosphere for young patients, plus sealants and early orthodontics.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pb-5" id="appointment">
    <div class="container">
        <div class="cta-card d-flex flex-column flex-lg-row align-items-center justify-content-between gap-3">
            <div>
                <h3>Schedule your visit</h3>
                <p>Call +1 (555) 910-2020 or book online to reserve the next available appointment.</p>
            </div>
            <div class="d-flex gap-2 flex-wrap">
                <a class="btn btn-primary-gradient" href="#top">Plan a visit</a>
                <a class="btn btn-secondary-light" href="#services">See services</a>
            </div>
        </div>
    </div>
</section>
