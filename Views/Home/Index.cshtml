@{
    ViewData["Title"] = "Cabinet Medical - Digital Clinic";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="text-center">
            <h1 class="hero-title">Modern care, organized and calm</h1>
            <p class="hero-subtitle">
                Cabinet Medical unifies appointments, records, and clinical workflows in one serene, bilingual-ready workspace designed for trusted care teams.
            </p>

            <div class="hero-buttons">
                <a href="#consultation" class="btn-hero-primary">
                    Explore the medical hub
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a href="#appointment" class="btn-hero-secondary">
                    <i class="fas fa-calendar-alt"></i>
                    See how scheduling flows
                </a>
            </div>

            <div class="hero-stats">
                <div class="stat-card">
                    <div class="stat-number">5,000 +</div>
                    <div class="stat-text">Patients guided through organized treatment plans with clear follow-ups.</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">100%</div>
                    <div class="stat-text">Role-based security with modern tooling for confident, coordinated care.</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section">
    <div class="services-container">
        <div class="row align-items-start mb-4">
            <div class="col-lg-6">
                <h2 class="section-title">Built for calm, coordinated clinics</h2>
            </div>
            <div class="col-lg-6">
                <p class="section-description">
                    From reception to prescriptions, Cabinet Medical keeps every team member focused with structured pages,
                    balanced typography, and a gentle blue palette that highlights what matters.
                </p>
            </div>
        </div>

        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                <h3 class="service-title">Centralized patient files</h3>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h3 class="service-title">Structured clinical notes</h3>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-microscope"></i>
                </div>
                <h3 class="service-title">Diagnostic tracking</h3>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-prescription"></i>
                </div>
                <h3 class="service-title">Prescription workflows</h3>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-user-heart"></i>
                </div>
                <h3 class="service-title">Patient-friendly summaries</h3>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="service-title">Secure multi-role access</h3>
            </div>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted mb-3">Everything your clinic needs, thoughtfully organized in one calm interface.</p>
            <a href="#appointment" class="btn btn-primary">
                <i class="fas fa-calendar-check me-2"></i>Request a guided tour
            </a>
        </div>
    </div>
</section>

<!-- Features Section (for internal use) -->
<section class="container py-5" id="consultation">
    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="icon-badge gradient-primary mb-3">
                    <i class="fas fa-notes-medical"></i>
                </div>
                <h4 class="fw-semibold mb-2">Centralized dossiers</h4>
                <p class="text-muted mb-3">Review histories, diagnostics, and prescriptions at a glanceâ€”always in English-first labels.</p>
                <a asp-area="Medical" asp-controller="DossierMedicals" asp-action="Index" class="btn btn-link p-0 fw-semibold">
                    Go to medical records <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="icon-badge gradient-primary mb-3">
                    <i class="fas fa-heart-pulse"></i>
                </div>
                <h4 class="fw-semibold mb-2">Intuitive monitoring</h4>
                <p class="text-muted mb-3">Plan consultations, track care plans, and keep every encounter aligned with calming, legible UI cues.</p>
                <span class="badge rounded-pill" style="background-color: rgba(122, 163, 209, 0.2); color: var(--btn-accent);">
                    Designed for productivity
                </span>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="icon-badge gradient-primary mb-3">
                    <i class="fas fa-lock"></i>
                </div>
                <h4 class="fw-semibold mb-2">Calm, secure by design</h4>
                <p class="text-muted mb-3">Role separation between FrontDesk and Medical areas keeps data protected while preserving clarity for every user.</p>
                <span class="badge rounded-pill" style="background-color: rgba(122, 163, 209, 0.2); color: var(--btn-accent);">
                    GDPR-ready
                </span>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
}
