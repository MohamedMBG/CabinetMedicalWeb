@{
    ViewData["Title"] = "Accueil";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-3">Bienvenue au Cabinet Médical</h1>
    <p class="lead text-muted">Sélectionnez votre espace de travail ci-dessous.</p>

    <div class="row justify-content-center mt-5">

        <!-- CARTE ESPACE MEDICAL (DEV B) -->
        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow-sm border-0" style="background-color: #E9EFF7;">
                <div class="card-body text-center p-5">
                    <i class="fas fa-stethoscope fa-4x mb-3" style="color: #91B3D9;"></i>
                    <h3 class="card-title" style="color: #666B72;">Espace Médecin</h3>
                    <p class="card-text">Accédez aux dossiers patients, consultations et prescriptions.</p>
                    <a asp-area="Medical" asp-controller="DossierMedicals" asp-action="Index" class="btn btn-lg text-white mt-3" style="background-color: #91B3D9; width: 100%;">
                        Accéder aux Dossiers &rarr;
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>