</section>

<!-- Reservation Section -->
<section class="reservation-section" id="reservation">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-5">
                <div class="reservation-copy">
                    <div class="badge-pill badge-soft">Réservation</div>
                    <h3>Réservez votre rendez-vous</h3>
                    <p>Une interface minimaliste pour choisir votre dentiste, votre motif et l'horaire qui vous convient.</p>
                    <ul class="reservation-benefits">
                        <li><i class="fas fa-check-circle"></i> Confirmation immédiate par email</li>
                        <li><i class="fas fa-check-circle"></i> Créneaux visibles en temps réel</li>
                        <li><i class="fas fa-check-circle"></i> Possibilité d'ajouter des notes</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="reservation-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h4 class="mb-1">Rendez-vous dentaire</h4>
                            <p class="text-muted mb-0">Sélectionnez votre praticien et votre horaire.</p>
                        </div>
                        <span class="pill">UI uniquement</span>
                    </div>
                    <form class="reservation-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Nom complet</label>
                                <input type="text" class="form-control" placeholder="Votre nom" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" placeholder="vous@email.com" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Téléphone</label>
                                <input type="tel" class="form-control" placeholder="06 00 00 00 00" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Dentiste</label>
                                <select class="form-select">
                                    <option>Dr. Elise Martin</option>
                                    <option>Dr. Hugo Leblanc</option>
                                    <option>Dr. Sofia Amrani</option>
                                    <option>Dr. Noah Tabet</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Date</label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Horaire</label>
                                <select class="form-select">
                                    <option>09:00</option>
                                    <option>10:30</option>
                                    <option>14:00</option>
                                    <option>16:30</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Motif</label>
                                <textarea class="form-control" rows="3" placeholder="Détartrage, consultation, urgence..." style="resize: none;"></textarea>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4">
                            <div class="d-flex align-items-center gap-2 text-muted">
                                <i class="fas fa-lock"></i>
                                <small>Données sécurisées - UI de démonstration</small>
                            </div>
                            <button type="button" class="btn btn-primary px-4">
                                Confirmer le créneau
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                const target = document.querySelector(targetId);
                if (target) {
                    e.preventDefault();
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
}
