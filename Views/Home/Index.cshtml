@{
    ViewData["Title"] = "Cabinet Dentaire - Accueil";
}

<!-- Hero Section -->
<section class="hero-section dental-hero">
    <div class="hero-content">
        <div class="text-center">
            <div class="badge-pill badge-soft">Cabinet dentaire numérique</div>
            <h1 class="hero-title">Des sourires soignés dans un espace apaisant</h1>
            <p class="hero-subtitle">
                Une clinique dentaire moderne où chaque visite est fluide : prise de rendez-vous, suivi, et échange avec
                votre dentiste préféré dans une ambiance douce.
            </p>

            <div class="hero-buttons">
                <a href="#dentists" class="btn-hero-primary">
                    Découvrir nos dentistes
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a href="#reservation" class="btn-hero-secondary">
                    <i class="fas fa-calendar-alt"></i>
                    Prendre rendez-vous
                </a>
            </div>

            <div class="hero-stats">
                <div class="stat-card">
                    <div class="stat-number">12 +</div>
                    <div class="stat-text">Années d'expérience en soins dentaires esthétiques et conservateurs.</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">4</div>
                    <div class="stat-text">Chirurgiens-dentistes disponibles avec des spécialisations complémentaires.</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section" id="services">
    <div class="services-container">
        <div class="row align-items-start mb-4">
            <div class="col-lg-6">
                <h2 class="section-title">Une équipe à votre écoute</h2>
            </div>
            <div class="col-lg-6">
                <p class="section-description">
                    Détartrage doux, implants, blanchiment : nos praticiens suivent des protocoles précis et partagent
                    des recommandations claires avant, pendant et après chaque soin.
                </p>
            </div>
        </div>

        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-tooth"></i>
                </div>
                <h3 class="service-title">Soins conservateurs</h3>
                <p class="service-text">Obturation, soins des gencives, contrôle complet dans une salle lumineuse.</p>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-toothbrush"></i>
                </div>
                <h3 class="service-title">Hygiène & prévention</h3>
                <p class="service-text">Détartrage, conseils personnalisés et suivi digital des habitudes quotidiennes.</p>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-smile-beam"></i>
                </div>
                <h3 class="service-title">Esthétique dentaire</h3>
                <p class="service-text">Blanchiment, alignement discret et retouches cosmétiques personnalisées.</p>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <h3 class="service-title">Suivi post-soin</h3>
                <p class="service-text">Notifications, contrôles réguliers et plans d'entretien simplifiés.</p>
            </div>
        </div>
    </div>
</section>

<!-- Dentists Section -->
<section class="container py-5" id="dentists">
    <div class="section-header d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4">
