@{
    ViewData["Title"] = "Cabinet Dentaire - Accueil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Variables locales pour la page d'accueil */
    :root {
        --hero-overlay: linear-gradient(135deg, rgba(79, 70, 229, 0.9) 0%, rgba(124, 58, 237, 0.8) 100%);
        --text-dark: #1E293B;
        --text-light: #64748B;
        --bg-soft: #F8FAFC;
    }

    /* --- 1. HERO SECTION --- */
    .hero-section {
        position: relative;
        min-height: 85vh;
        display: flex;
        align-items: center;
        /* Image de fond : Cabinet dentaire moderne et lumineux */
        background: url('https://images.unsplash.com/photo-1629909613654-28e377c37b09?q=80&w=2068&auto=format&fit=crop') no-repeat center center/cover;
        color: white;
        overflow: hidden;
        margin-top: -70px; /* Pour passer sous la navbar fixe si nécessaire */
        padding-top: 70px;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, rgba(17, 24, 39, 0.8) 0%, rgba(17, 24, 39, 0.4) 100%);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    .hero-badge {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        opacity: 0.9;
        line-height: 1.6;
        margin-bottom: 2.5rem;
        font-weight: 300;
    }

    .btn-hero {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
    }

    .btn-hero-primary {
        background: #4F46E5;
        color: white;
        border: none;
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4);
    }

    .btn-hero-primary:hover {
        background: #4338CA;
        transform: translateY(-2px);
        color: white;
    }

    .btn-hero-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        margin-left: 1rem;
    }

    .btn-hero-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    /* --- 2. STATS FLOTTANTS --- */
    .hero-stats-container {
        position: relative;
        z-index: 3;
        margin-top: -4rem;
        margin-bottom: 4rem;
    }

    .stats-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 20px 40px -5px rgba(0, 0, 0, 0.1);
        display: grid;
        grid-template-columns: repeat(md, 1fr);
        gap: 2rem;
        border: 1px solid #E2E8F0;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0 1rem;
        border-right: 1px solid #F1F5F9;
    }

    .stat-item:last-child { border-right: none; }

    .stat-icon {
        width: 56px;
        height: 56px;
        background: #EEF2FF;
        color: #4F46E5;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-info h3 { font-size: 1.5rem; font-weight: 800; color: var(--text-dark); margin: 0; }
    .stat-info p { margin: 0; color: var(--text-light); font-size: 0.9rem; }

    /* --- 3. SERVICES --- */
    .section-title-wrapper {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 3rem auto;
    }

    .section-tag {
        color: #4F46E5;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.85rem;
        display: block;
        margin-bottom: 0.5rem;
    }

    .section-heading {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 1rem;
    }

    .service-card {
        background: white;
        border-radius: 24px;
        padding: 2rem;
        transition: all 0.3s ease;
        border: 1px solid #F1F5F9;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px -5px rgba(0, 0, 0, 0.08);
        border-color: #E0E7FF;
    }

    .service-card::before {
        content: '';
        position: absolute;
        top: 0; right: 0;
        width: 100px; height: 100px;
        background: radial-gradient(circle at top right, #EEF2FF 0%, transparent 70%);
        border-radius: 0 0 0 100%;
        transition: all 0.3s;
    }

    .service-icon {
        width: 64px;
        height: 64px;
        background: #4F46E5;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 1;
    }

    .service-title { font-size: 1.25rem; font-weight: 700; margin-bottom: 0.75rem; color: var(--text-dark); }
    .service-desc { color: var(--text-light); line-height: 1.6; font-size: 0.95rem; }

    /* --- 4. DENTISTS (IMAGES) --- */
    .profile-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        border: 1px solid #F1F5F9;
        transition: transform 0.3s;
    }

    .profile-card:hover { transform: translateY(-5px); }

    .profile-img-wrapper {
        height: 260px;
        overflow: hidden;
        position: relative;
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .profile-card:hover .profile-img { transform: scale(1.05); }

    .profile-content { padding: 1.5rem; }
    .profile-name { font-size: 1.1rem; font-weight: 700; color: var(--text-dark); margin-bottom: 0.25rem; }
    .profile-spec { color: #4F46E5; font-size: 0.85rem; font-weight: 500; margin-bottom: 1rem; }
    .profile-availability {
        background: #ECFDF5;
        color: #059669;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
    }

    /* --- 5. SPACE SECTION (Split Layout) --- */
    .space-section {
        background-color: var(--bg-soft);
        padding: 5rem 0;
        overflow: hidden;
    }

    .space-img-container {
        position: relative;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
    }

    .space-img {
        width: 100%;
        display: block;
    }

    .feature-list li {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
        gap: 1rem;
        color: var(--text-dark);
    }

    .feature-list i {
        color: #4F46E5;
        background: #EEF2FF;
        padding: 0.5rem;
        border-radius: 50%;
        font-size: 0.9rem;
    }

    /* --- 6. RESERVATION (Floating Card) --- */
    .reservation-card {
        background: white;
        padding: 2.5rem;
        border-radius: 24px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        border: 1px solid #E2E8F0;
    }

    .form-control-custom {
        background: #F8FAFC;
        border: 1px solid #E2E8F0;
        border-radius: 12px;
        padding: 0.75rem 1rem;
    }
    
    .form-control-custom:focus {
        background: white;
        border-color: #4F46E5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    /* Responsive Tweaks */
    @@media (max-width: 768px) {
        .hero-title { font-size: 2.5rem; }
        .hero-stats-container { margin-top: 2rem; }
        .stat-item { border-right: none; border-bottom: 1px solid #F1F5F9; padding-bottom: 1rem; margin-bottom: 1rem; }
        .stat-item:last-child { border-bottom: none; margin-bottom: 0; }
    }
</style>

