<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cabinet Medical</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Global Custom Theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CabinetMedicalWeb.styles.css" asp-append-version="true" />

    <style>
        :root{
            --primary: #4F46E5;
            --primary-dark: #4338CA;
            --text: #111827;
            --muted: #6B7280;
            --bg: #F9FAFB;
            --border: #E5E7EB;

            --nav-height: 76px;
            --radius: 14px;
        }

        html, body { height: 100%; }
        body{
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background: var(--bg);
            color: var(--text);
            padding-top: var(--nav-height); /* prevent content under fixed navbar */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* NAVBAR - Always Visible */
        .navbar{
            height: var(--nav-height);
            background: white;
            backdrop-filter: none;
            -webkit-backdrop-filter: none;
            border-bottom: 1px solid rgba(229,231,235,.9);
            box-shadow: 0 1px 3px rgba(0,0,0,.04);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            transition: none;
        }

        .navbar .container{
            max-width: 1200px;
        }

        .navbar-brand{
            display: flex;
            align-items: center;
            gap: .75rem;
            font-weight: 800;
            letter-spacing: -0.02em;
            color: var(--text) !important;
            font-size: 1.25rem;
        }

        .logo-icon{
            width: 38px;
            height: 38px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--primary), #818CF8);
            color: #fff;
            box-shadow: 0 6px 16px rgba(79,70,229,.20);
            flex-shrink: 0;
        }

        /* Nav links - Always Visible */
        .navbar-nav {
            display: flex;
            align-items: center;
        }

        .navbar-nav .nav-link{
            font-weight: 600;
            color: #4B5563 !important;
            padding: .55rem .9rem !important;
            border-radius: 12px;
            transition: background .15s ease, color .15s ease;
            display: inline-flex;
            align-items: center;
            gap: .45rem;
            white-space: nowrap;
        }

        .navbar-nav .nav-link i{
            color: #9CA3AF;
            transition: color .15s ease;
            font-size: 0.9em;
        }

        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active{
            background: rgba(79,70,229,.07);
            color: var(--primary) !important;
        }

        .navbar-nav .nav-link:hover i,
        .navbar-nav .nav-link.active i{
            color: var(--primary);
        }

        /* Always show navigation items based on role */
        .nav-section {
            display: flex;
            gap: 0.25rem;
        }

        /* Phone badge - Always visible */
        .phone-number{
            display: inline-flex;
            align-items: center;
            gap: .5rem;
            font-weight: 700;
            color: var(--muted);
            background: #F3F4F6;
            border: 1px solid rgba(229,231,235,.9);
            padding: .45rem .8rem;
            border-radius: 999px;
            white-space: nowrap;
            font-size: 0.9rem;
        }
        .phone-number i{ color: var(--primary); }

        /* Mobile menu */
        @@media (max-width: 991.98px){
            .navbar-collapse{
                margin-top: .75rem;
                background: white;
                border: 1px solid rgba(229,231,235,.9);
                border-radius: 16px;
                padding: .85rem;
                box-shadow: 0 20px 35px rgba(0,0,0,.08);
                max-height: calc(100vh - 100px);
                overflow-y: auto;
            }

            .navbar-nav{
                gap: .5rem !important;
                margin-left: 0 !important;
                flex-direction: column;
                align-items: stretch;
            }

            .navbar-nav .nav-link{
                width: 100%;
                justify-content: flex-start;
                padding: .7rem 1rem !important;
            }

            .phone-number{
                width: 100%;
                justify-content: center;
                margin: .5rem 0;
            }
            
            .nav-section {
                flex-direction: column;
                width: 100%;
            }
        }

        /* Toggler */
        .navbar-toggler{
            border: 0 !important;
            padding: .5rem .6rem;
            border-radius: 12px;
            background: #F3F4F6;
        }
        .navbar-toggler:focus{
            box-shadow: 0 0 0 .25rem rgba(79,70,229,.18);
        }
        .navbar-toggler-icon{
            filter: contrast(1.15);
        }

        /* MAIN + FOOTER */
        main{
            flex: 1 0 auto;
            padding-top: 1.5rem;
        }

        footer{
            background: white;
            border-top: 1px solid var(--border);
            margin-top: auto;
        }
    </style>
    
    <!-- Script to handle active nav links -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set active nav link based on current page
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentPath.startsWith(href.replace(/\/$/, '')) && href !== '/') {
                    link.classList.add('active');
                }
            });
            
            // Highlight home if on root
            if (currentPath === '/' || currentPath === '/Home' || currentPath === '/Home/Index') {
                const homeLink = document.querySelector('a[href="/"], a[href="/Home"], a[href="/Home/Index"]');
                if (homeLink) homeLink.classList.add('active');
            }
        });
    </script>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="logo-icon">
                    <i class="fas fa-heart-pulse"></i>
                </div>
                <span>Cabinet Medical</span>
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Always show navigation for all users -->
                <ul class="navbar-nav me-auto ms-lg-4 mb-2 mb-lg-0 gap-2 nav-section">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Medecin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Medical" asp-controller="DossierMedicals" asp-action="Index">
                                    <i class="fas fa-folder-medical"></i>
                                    <span>Medical Records</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Medical" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Medical" asp-controller="Patients" asp-action="Index">
                                    <i class="fas fa-user-injured"></i>
                                    <span>My Patients</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Secretaire"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="FrontDesk" asp-controller="Agenda" asp-action="Index">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span>Appointments</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="FrontDesk" asp-controller="Patients" asp-action="Index">
                                    <i class="fas fa-users"></i>
                                    <span>Patients</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="FrontDesk" asp-controller="Calendar" asp-action="Index">
                                    <i class="fas fa-calendar-day"></i>
                                    <span>Calendar</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    <i class="fas fa-user-cog"></i>
                                    <span>User Management</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Settings" asp-action="Index">
                                    <i class="fas fa-cogs"></i>
                                    <span>Settings</span>
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <!-- Public navigation for non-authenticated users -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Services">
                                <i class="fas fa-briefcase-medical"></i>
                                <span>Services</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-circle-info"></i>
                                <span>About</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope"></i>
                                <span>Contact</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Doctors">
                                <i class="fas fa-user-md"></i>
                                <span>Our Doctors</span>
                            </a>
                        </li>
                    }
                </ul>

                <!-- Phone number - Always visible -->
                <div class="d-none d-lg-flex align-items-center gap-3 me-3">
                    <span class="phone-number">
                        <i class="fas fa-phone"></i>
                        +7 (707) 770-70-37
                    </span>
                </div>

                <!-- Login/User section -->
                <div class="d-flex align-items-center mt-2 mt-lg-0">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>
</header>

<main role="main">
    @RenderBody()
</main>

<footer class="mt-auto">
    <div class="container text-center text-muted small py-4">
        &copy; 2025 - <strong>Cabinet Medical</strong> | Digital-first care experience
        <div class="mt-2">
            <span class="phone-number">
                <i class="fas fa-phone"></i>
                +7 (707) 770-70-37
            </span>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>