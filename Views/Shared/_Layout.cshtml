<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CabinetMedicalWeb</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Bootstrap (Structure) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Global Custom Theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CabinetMedicalWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top" style="background-color: rgba(255,255,255,0.9); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(0,0,0,0.05);">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <div style="width: 32px; height: 32px; background: var(--color-primary); border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white;">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <span style="color: var(--text-main);">MedWeb<span style="color: var(--color-primary);">App</span></span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-4 gap-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>

                        <!-- Area: Medical -->
                        <li class="nav-item">
                            <a class="nav-link fw-bold" style="color: var(--color-primary);" asp-area="Medical" asp-controller="DossierMedicals" asp-action="Index">
                                <i class="fas fa-stethoscope me-1"></i> Espace Médical
                            </a>
                        </li>

                        <!-- Area: FrontDesk -->
                        <li class="nav-item">
                            <a class="nav-link" style="color: var(--color-secondary);" asp-area="FrontDesk" asp-controller="RendezVous" asp-action="Index">
                                <i class="fas fa-calendar-alt me-1"></i> Secrétariat
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Wrapper with padding for fixed navbar -->
    <div class="container py-5 mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto py-4 border-top text-center text-muted small" style="background-color: white;">
        <div class="container">
            &copy; 2025 - <strong>CabinetMedicalWeb</strong> | Système de Gestion Clinique Moderne
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>