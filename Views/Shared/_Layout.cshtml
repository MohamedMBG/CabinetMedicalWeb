<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RS dent</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Bootstrap (Structure) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Global Custom Theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CabinetMedicalWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="logo-icon">
                        <i class="fas fa-tooth"></i>
                    </div>
                    <span>RS dent</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav flex-grow-1 ms-4 gap-2">
                            @if (User.IsInRole("Medecin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Medical" asp-controller="DossierMedicals" asp-action="Index">
                                        <i class="fas fa-folder-medical me-1"></i>Medical Records
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Secretaire"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="FrontDesk" asp-controller="Agenda" asp-action="Index">
                                        <i class="fas fa-calendar-alt me-1"></i>Appointments
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="FrontDesk" asp-controller="Patients" asp-action="Index">
                                        <i class="fas fa-users me-1"></i>Patients
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1 ms-4 gap-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Услуги</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">О нас</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Контакты</a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center gap-3">
                            <span class="phone-number">
                                <i class="fas fa-phone me-1"></i>+7 (707) 770-70-37
                            </span>
                        </div>
                    }
                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Wrapper with padding for fixed navbar -->
    <main role="main" class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="mt-auto">
        <div class="container text-center text-muted small py-4">
            &copy; 2025 - <strong>RS dent</strong> | Клиника стоматологии
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>