@model CabinetMedicalWeb.Models.ReservationDashboardViewModel
@{
    ViewData["Title"] = "Book an appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="max-width: 1100px;">
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h2 class="h4 mb-3">Request a consultation</h2>
                    <p class="text-muted">Complete this form to send your request to our front desk team.</p>
                    <div class="alert alert-info d-flex align-items-start">
                        <i class="fas fa-info-circle me-2 mt-1"></i>
                        <div>
                            Our team will review your request, assign it to the right dentist, and confirm the exact appointment time.
                            Track updates here using the same email address.
                        </div>
                    </div>

                    @if (TempData["ReservationSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["ReservationSuccess"]
                        </div>
                    }

                    <form asp-action="Submit" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Form.Nom" class="form-label"></label>
                                <input asp-for="Form.Nom" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.Nom"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Form.Prenom" class="form-label"></label>
                                <input asp-for="Form.Prenom" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.Prenom"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Form.Telephone" class="form-label"></label>
                                <input asp-for="Form.Telephone" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.Telephone"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Form.Email" class="form-label"></label>
                                <input asp-for="Form.Email" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.Email"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Form.DateNaissance" class="form-label"></label>
                                <input asp-for="Form.DateNaissance" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.DateNaissance"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Form.DateSouhaitee" class="form-label">Preferred date & time</label>
                                <input asp-for="Form.DateSouhaitee" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.DateSouhaitee"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Form.Adresse" class="form-label"></label>
                                <input asp-for="Form.Adresse" class="form-control" />
                                <span class="text-danger" asp-validation-for="Form.Adresse"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Form.Motif" class="form-label"></label>
                                <textarea asp-for="Form.Motif" rows="3" class="form-control"></textarea>
                                <span class="text-danger" asp-validation-for="Form.Motif"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mt-4">Send my request</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h2 class="h5 mb-3">Track your requests</h2>
                    <p class="text-muted small">Use the same email to view the history of your submissions.</p>

                    @if (Model.Reservations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>Preferred date</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Confirmed date</th>
                                        <th>Assigned to</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model.Reservations)
                                    {
                                        <tr>
                                            <td>@reservation.DateSouhaitee.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@reservation.Motif</td>
                                            <td>
                                                @{
                                                    var badgeClass = reservation.Statut == ReservationStatus.Confirmed ? "success" : reservation.Statut == ReservationStatus.Rejected ? "danger" : "warning text-dark";
                                                    var statutLabel = reservation.Statut == ReservationStatus.Confirmed ? "Confirmed" : reservation.Statut == ReservationStatus.Rejected ? "Rejected" : "Pending";
                                                }
                                                <span class="badge bg-@badgeClass">@statutLabel</span>
                                            </td>
                                            <td>
                                                @if (reservation.DateHeureConfirmee.HasValue)
                                                {
                                                    <div class="fw-semibold">@reservation.DateHeureConfirmee.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                                    <div class="text-muted small">Confirmed slot</div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">Awaiting confirmation</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(reservation.DoctorId) && reservation.Doctor != null)
                                                {
                                                    <span>Dr. @reservation.Doctor.Prenom @reservation.Doctor.Nom</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Pending</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <p class="mb-1">No requests found.</p>
                            <p class="small">Submit a new request or use your email to review existing statuses.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
